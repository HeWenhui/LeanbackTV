<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="25dp">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@id/ll_live_roleplayer_message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@id/iv_live_roleplayer_message_user_segment"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerInParent="true" />

                <com.xueersi.parentsmeeting.modules.livevideo.widget.CountDownHeadImageView
                    android:id="@id/civ_live_roleplayer_message_user_head"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/ic_default_head_square" />
            </RelativeLayout>


            <TextView
                android:id="@id/tv_live_roleplayer_message_username"
                style="@style/text_style_chat__name_style"
                android:layout_gravity="center_horizontal"
                android:layout_width="60dp"
                android:layout_marginTop="-7dp"
                android:gravity="center"
                android:textColor="#078EC2"
                android:textSize="11sp"
                android:singleLine="true"
                android:ellipsize="end" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="13dp"
            android:id="@id/rl_live_roleplayer_message_voice_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="77dp"
            android:background="@drawable/selector_live_roleplayer_other_item_bubble"
            android:minHeight="32dp"
            android:minWidth="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/iv_live_roleplayer_message_voice_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/yuyin_you_huifang_3" />

            <TextView
                android:id="@id/tv_live_roleplayer_message_voice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical|left"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-2dp"
                android:layout_toRightOf="@id/iv_live_roleplayer_message_voice_main"
                android:maxWidth="325dp"
                android:textColor="#333333"
                android:textSize="17sp"
                android:text="contentcontent"
                android:lineSpacingExtra="2dp"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@id/rl_live_roleplayer_message_dz"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/rl_live_roleplayer_message_voice_main"
            android:layout_toRightOf="@+id/rl_live_roleplayer_message_voice_main">

            <ImageView
                android:id="@id/iv_live_roleplayer_message_dz"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/livevideo_roleplay_result_ic_normal"
                android:layout_centerInParent="true"
                android:clickable="true"

                />

            <!-- <com.airbnb.lottie.LottieAnimationView
                 android:id="@id/lav_live_roleplayer_message_dz"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 app:lottie_fileName="live_stand_roleplayer_dz.json"
                 app:lottie_imageAssetsFolder="Images/roleplayer_dz" />-->
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_live_roleplayer_message_voice_main"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/ll_live_roleplayer_message_user_name"
            android:layout_alignLeft="@+id/rl_live_roleplayer_message_voice_main"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>