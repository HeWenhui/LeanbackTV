<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@id/ll_live_roleplayer_message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.xueersi.parentsmeeting.modules.livevideo.widget.CountDownHeadImageView
                    android:id="@id/civ_live_roleplayer_message_user_head"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/ic_default_head_square" />

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/roleplay_touxiangzhezhao_pic_nor" />

            </RelativeLayout>

            <TextView
                android:id="@id/tv_live_roleplayer_message_username"
                style="@style/text_style_chat__name_style"
                android:layout_width="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#4e5bc1"
                android:textSize="11sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@id/rl_live_roleplayer_message_voice_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63dp"
            android:background="@drawable/selector_live_stand_roleplayer_other_item_bubble"
            android:minHeight="32dp"
            android:minWidth="120dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@id/iv_live_roleplayer_message_voice_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/yuyin_you_huifang_3" />

            <TextView
                android:id="@id/tv_live_roleplayer_message_voice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-2dp"
                android:layout_toRightOf="@id/iv_live_roleplayer_message_voice_main"
                android:gravity="center_vertical|left"
                android:maxWidth="325dp"
                android:textColor="#333333"
                android:textSize="17sp"
                android:lineSpacingExtra="2dp"
                tools:text="content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl_live_roleplayer_message_voice_main"
            android:layout_below="@id/rl_live_roleplayer_message_voice_main"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/ll_live_roleplayer_message_user_name"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>