<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9f000000"
    android:orientation="vertical">

    <ImageView
        android:id="@id/iv_livevideo_expe_course_game_result"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:id="@id/rl_livevideo_expe_course_game_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_livevideo_expe_course_game_result"
        android:layout_alignBottom="@id/iv_livevideo_expe_course_game_result"
        android:layout_centerHorizontal="true">

        <View
            android:id="@id/v_livevideo_expe_course_game_result"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@id/tv_livevideo_expe_course_game_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_livevideo_expe_course_game_result"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="奖励1金币"
            android:textSize="18dp" />
    </RelativeLayout>
</RelativeLayout>