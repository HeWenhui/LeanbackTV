<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:orientation="vertical"
    >
    <LinearLayout
        android:visibility="gone"
        android:background="#cc000000"
        android:orientation="vertical"
        android:id="@+id/ll_rank_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@id/rl_livevideo_rank_mygroup"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
                    android:id="@id/tv_livevideo_rank_mygroup"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="组内"
                    android:textSize="16sp"
                    android:textColor="@color/COLOR_F13232"/>

                <View
                    android:id="@id/v_livevideo_rank_mygroup"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_below="@id/tv_livevideo_rank_mygroup"
                    android:layout_marginTop="10dp"
                    android:background="@color/COLOR_F13232"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/rl_livevideo_rank_groups"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
                    android:id="@id/tv_livevideo_rank_groups"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="小组"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

                <View
                    android:id="@id/v_livevideo_rank_groups"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_below="@id/tv_livevideo_rank_groups"
                    android:layout_marginTop="10dp"
                    android:background="@color/COLOR_F13232"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/rl_livevideo_rank_class"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">

                <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
                    android:id="@id/tv_livevideo_rank_class"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="班级"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

                <View
                    android:id="@id/v_livevideo_rank_class"
                    android:layout_width="30dp"
                    android:layout_height="2dp"
                    android:layout_below="@id/tv_livevideo_rank_class"
                    android:layout_marginTop="10dp"
                    android:background="@color/COLOR_F13232"
                    android:visibility="gone"/>
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/COLOR_PKDEVIDING"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
                style="@style/text_font11_ffffff_style"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center"
                android:text="排名"/>

            <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
                android:id="@id/tv_livevideo_rank_subtitle_mid"
                style="@style/text_font11_ffffff_style"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"
                android:gravity="center"
                android:text="学员"/>

            <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
                style="@style/text_font11_ffffff_style"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="正确率"/>
        </RelativeLayout>

        <ListView
            android:id="@id/lv_livevideo_rank_list"
            style="@style/listview_common_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:divider="@color/transparent"
            android:dividerHeight="10dp"/>
    </LinearLayout>


</LinearLayout>