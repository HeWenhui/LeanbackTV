<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <TextView
        android:id="@id/tv_livevideo_bigque_result_num"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="1"
        android:textColor="@color/title_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_livevideo_bigque_result_type"
        android:layout_toRightOf="@id/tv_livevideo_bigque_result_num"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv_livevideo_bigque_result_stand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_livevideo_bigque_result_num"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="A"
            android:textColor="@color/title_color" />

        <TextView
            android:id="@id/tv_livevideo_bigque_result_your"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="B"
            android:textColor="@color/title_color" />

    </LinearLayout>

    <ImageView
        android:id="@id/iv_livevideo_bigque_result_type"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:includeFontPadding="false" />
</RelativeLayout>