<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingRight="25dp">


    <RelativeLayout
        android:id="@id/rl_live_roleplayer_message_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@id/ll_roleplayer_message_self_head_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@id/iv_live_roleplayer_message_user_segment"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_centerInParent="true" />

                <com.xueersi.parentsmeeting.modules.livevideo.widget.CountDownHeadImageView
                    android:id="@id/civ_live_roleplayer_message_user_head"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_centerInParent="true"
                    android:focusable="false"
                    android:src="@drawable/ic_default_head_square" />

                <TextView
                    android:id="@id/tv_live_roleplayer_message_counttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:visibility="invisible" />

            </RelativeLayout>


            <TextView
                android:id="@id/tv_live_roleplayer_message_username"
                style="@style/text_style_chat__name_style"
                android:layout_width="60dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="-7dp"
                android:textColor="#108479"
                android:textSize="11sp"
                android:singleLine="true"
                android:ellipsize="end" />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="13dp"
            android:id="@id/rl_live_roleplayer_message_voice_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="77dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_live_roleplayer_self_item_bubble"
            android:clickable="true"
            android:minHeight="32dp"
            android:minWidth="120dp"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_live_roleplayer_message_voice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-2dp"
                android:layout_toLeftOf="@id/iv_live_roleplayer_message_voice_main"
                android:gravity="center_vertical|left"
                android:maxWidth="325dp"
                android:textColor="#333333"
                android:textSize="17sp"
                android:layout_weight="1"
                tools:text="contencontentcontenttcontent"
                />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_voice_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/animlst_livevideo_roleplayer_self_voice_white_anim" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_live_roleplayer_message_voice_main"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/ll_roleplayer_message_self_head_main"
            android:layout_marginTop="0dp"
            android:layout_alignRight="@+id/rl_live_roleplayer_message_voice_main"

            android:id="@+id/linearLayout">

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

            <ImageView
                android:id="@id/iv_live_roleplayer_message_speech_start1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_alignRight="@+id/linearLayout"
                android:src="@drawable/livevideo_roleplay_result_ic"
                android:visibility="invisible" />

        </LinearLayout>



    </RelativeLayout>

</LinearLayout>