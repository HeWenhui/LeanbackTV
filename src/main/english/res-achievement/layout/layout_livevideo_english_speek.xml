<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@id/rl_livevideo_english_speak_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <TextView
            android:id="@id/tv_livevideo_english_lable"
            style="@style/text_font10_ffffff_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="开口时长" />

        <TextView
            android:id="@id/tv_livevideo_english_time"
            style="@style/text_font10_ffffff_style"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_livevideo_english_lable"
            android:text="0'0" />

        <ProgressBar
            android:id="@id/tv_livevideo_english_prog"
            style="@style/ProgressBar_live_english"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_below="@id/tv_livevideo_english_lable"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:max="45" />

        <RelativeLayout
            android:id="@id/rl_livevideo_english_stat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_livevideo_english_prog"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@id/iv_livevideo_english_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bg_livevideo_english_stat" />

            <TextView
                android:id="@id/tv_livevideo_english_time2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/iv_livevideo_english_stat"
                android:gravity="right"
                android:text="再说15秒获得"
                android:textColor="@color/COLOR_666666"
                android:textSize="10sp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rl_livevideo_english_speak_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rl_livevideo_english_speak_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/rl_livevideo_english_speak_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone">

        <TextView
            android:id="@id/tv_livevideo_english_speak_error_tip"
            style="@style/text_font11_ffffff_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="分贝能量条需要麦克风权限" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_livevideo_english_speak_error_tip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

            <Button
                android:id="@id/bt_livevideo_english_speak_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_livevideo_english_tipbt_bg"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="设置"
                android:textColor="@color/white" />

            <Button
                android:id="@id/bt_livevideo_english_speak_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_livevideo_english_tipbt_bg"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:text="关闭"
                android:textColor="@color/white" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_livevideo_english_speak_content"
        android:background="#5C5C5C" />

</RelativeLayout>