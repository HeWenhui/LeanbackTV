<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@id/rl_livevideo_primary_team_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6663C4FF">

        <ImageView
            android:id="@id/iv_livevideo_primary_team_icon"
            android:layout_width="25dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@id/tv_livevideo_primary_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/iv_livevideo_primary_team_icon"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="冰原白狐队"
            android:textColor="#ffee7d05"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@id/ll_livevideo_primary_team_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#6663a4aF"
        android:orientation="vertical" />

    <TextView
        android:id="@id/tv_livevideo_primary_team_name_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_live_tips_bg_normal"
        android:gravity="center"
        android:text="欢迎进入“冰原白狐队”"
        android:textColor="#ffc33c00"
        android:textSize="14sp"
        android:visibility="gone" />

    <include
        layout="@layout/item_primary_class_team_inter"
        android:visibility="invisible" />
</RelativeLayout>