<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.xueersi.parentsmeeting.modules.livevideo.widget.LiveVideoFloatTitle
        android:id="@id/lrf_livevideo_evaluate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:floattitle="课程感受"
        app:showcancle="false" />

    <LinearLayout
        android:id="@id/ll_livevideo_evaluate_tip"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/lrf_livevideo_evaluate_title"
        android:layout_centerHorizontal="true"
        android:background="@color/livevideo_float_titleblue"
        android:orientation="vertical">

        <TextView
            android:id="@id/tv_livevideo_evaluate_success_tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="感谢您的评价!"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@id/tv_livevideo_evaluate_success_tip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="您的评价是教师提高教学质量的动力!"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_livevideo_evaluate_tip"
        android:background="@drawable/shape_livevideo_evaluate_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:src="@drawable/ic_mokey_success" />

        <View
            android:id="@id/v_livevideo_evaluate_bottom2"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@id/bt_livevideo_evaluate_submit_close"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/v_livevideo_evaluate_bottom2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_livevideo_close"
            android:text="关闭"
            android:textColor="@color/white" />
    </RelativeLayout>


</RelativeLayout>
