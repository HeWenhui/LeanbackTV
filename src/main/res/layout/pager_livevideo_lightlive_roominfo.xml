<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:background="@drawable/shape_linear_start_80000000_angle_90"
    >

    <TextView
        android:id="@id/tv_livevideo_message_count"
        style="@style/text_font12_ffffff_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:visibility="gone"/>

    <View
        android:id="@+id/v_livevideo_message_gap"
        android:layout_width="1dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/tv_livevideo_message_count"
        android:background="@color/COLOR_DCDCDC"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/iv_livevideo_lightlive_roominfo_notice"
        style="@style/text_font12_ffffff_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/iv_livevideo_lightlive_roominfo_close"
        android:layout_toRightOf="@+id/v_livevideo_message_gap"
        android:singleLine="true"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_livevideo_lightlive_roominfo_close"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:padding="4dp"
        android:src="@drawable/livevideo_alert_close_icon_normal"
        android:visibility="gone"/>
</RelativeLayout>