<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/livevideo_roleplay_bg">

    <!--RolePlayer主布局-->
    <RelativeLayout
        android:id="@id/rl_live_roleplayer_read_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@id/iv_live_roleplayer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/livevideo_roleplay_title" />


        <!--倒计时布局-->
        <LinearLayout
            android:id="@id/ll_live_roleplayer_countdown_main"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:background="@drawable/livevideo_roleplay_time_bg"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/livevideo_roleplay_time_ic" />

            <!--倒计时时间更新区-->
            <TextView
                android:id="@id/tv_live_roleplayer_countdown"
                style="@style/text_font16_999999_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:text="3分0秒"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </LinearLayout>

        <!--提示区-->
        <TextView
            android:id="@id/tv_live_roleplayer_countdown_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_live_roleplayer_title"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="25dp"
            android:hint="ready go"
            android:textColor="#FF9600"
            android:textSize="18sp" />


        <!--多人朗读区-->
        <!--对话区-->
        <ListView
            android:id="@id/lv_live_roleplayer_read_list"
            style="@style/listview_common_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_live_roleplayer_countdown_tip"
            android:layout_marginBottom="23dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:transcriptMode="normal"
            android:visibility="gone" />

        <!--收获点赞区-->
        <RelativeLayout
            android:id="@+id/rl_live_roleplayer_dz_message_bubble_main"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />


        <!--测评音量条区-->
        <RelativeLayout
            android:id="@id/rl_live_roleplayer_speech_volumewave_main"
            android:layout_width="324dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:background="@drawable/shape_livevideo_roleplayer_speech_volumewave_bg"
            android:visibility="invisible">

            <com.xueersi.parentsmeeting.widget.VolumeWaveView
                android:id="@id/vwv_livevideo_roleplayer_speech_volumewave"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true" />

        </RelativeLayout>


        <!--完成结果窗-->
        <RelativeLayout
            android:id="@id/rl_live_roleplayer_result_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#b2000000"
            android:visibility="gone"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_livevideo_roleplayer_result_qizhi"
                    android:layout_marginTop="-50dp"
                    android:background="@drawable/shape_livevideo_roleplayer_result">

                    <TextView
                        android:id="@id/tv_livevideo_roleplayer_result_totalscore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:textColor="#F13232"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:id="@id/tv_livevideo_roleplayer_result_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_livevideo_roleplayer_result_totalscore"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/livevideo_roleplay_alertview_like_ic" />

                                <TextView
                                    android:id="@id/tv_livevideo_roleplayer_result_dz_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="28dp"
                                    android:textColor="#2CB3E7"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@id/tv_livevideo_roleplayer_result_fluency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="11dp"
                                android:text="流畅性:"
                                android:textColor="#666666"
                                android:textSize="13sp" />

                        </LinearLayout>


                        <com.xueersi.xesalib.view.image.CircleImageView
                            android:id="@id/civ_livevideo_roleplayer_result_headimg"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:src="@drawable/ic_default_head_square"
                            app:border_color="#FAD2D1"
                            app:border_width="4dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/livevideo_roleplay_alertview__ic" />

                                <TextView
                                    android:id="@id/tv_livevideo_roleplayer_result_gold_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="28dp"
                                    android:textColor="#F09429"
                                    android:textSize="15sp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@id/tv_livevideo_roleplayer_result_accuracy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="11dp"
                                android:text="准确性:"
                                android:textColor="#666666"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_livevideo_roleplayer_result_head"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="24dp"
                        android:background="#FFF4F4F4"
                        android:orientation="horizontal"
                        android:paddingLeft="19dp"
                        android:paddingRight="19dp">


                        <RelativeLayout
                            android:id="@id/rl_livevideo_roleplayer_result_role_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.xueersi.xesalib.view.image.CircleImageView
                                android:id="@id/civ_livevideo_roleplayer_result_role_head_1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_default_head_square" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/civ_livevideo_roleplayer_result_role_head_1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/tv_livevideo_roleplayer_result_role_score_1"
                                    style="@style/text_font11_333333_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="96分" />

                                <TextView
                                    android:id="@id/tv_livevideo_roleplayer_result_role_nickname_1"
                                    style="@style/text_font11_333333_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:ellipsize="end"
                                    android:maxLength="5"
                                    android:singleLine="true"
                                    android:text="我是小可爱1" />
                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@id/rl_livevideo_roleplayer_result_role_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.xueersi.xesalib.view.image.CircleImageView
                                android:id="@id/civ_livevideo_roleplayer_result_role_head_2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_default_head_square" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/civ_livevideo_roleplayer_result_role_head_2"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/tv_livevideo_roleplayer_result_role_score_2"
                                    style="@style/text_font11_333333_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="96分" />

                                <TextView
                                    android:id="@id/tv_livevideo_roleplayer_result_role_nickname_2"
                                    style="@style/text_font11_333333_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:ellipsize="end"
                                    android:maxLength="5"
                                    android:singleLine="true"
                                    android:text="我是小可爱1" />
                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@id/rl_livevideo_roleplayer_result_role_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.xueersi.xesalib.view.image.CircleImageView
                                android:id="@id/civ_livevideo_roleplayer_result_role_head_3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_default_head_square" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/civ_livevideo_roleplayer_result_role_head_3"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/tv_livevideo_roleplayer_result_role_score_3"
                                    style="@style/text_font11_333333_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="96分" />

                                <TextView
                                    android:id="@id/tv_livevideo_roleplayer_result_role_nickname_3"
                                    style="@style/text_font11_333333_style"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="6dp"
                                    android:ellipsize="end"
                                    android:maxLength="5"
                                    android:singleLine="true"
                                    android:text="我是小可爱1" />
                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:id="@id/rl_livevideo_roleplayer_result_qizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_live_roleplayer_result_star"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-15dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/livevideo_roleplay_alertview_pic_bg" />

                    <TextView
                        android:id="@id/tv_livevideo_roleplayer_result_msgtip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Fantastic"
                        android:textColor="@color/white"
                        android:textSize="29sp" />

                </RelativeLayout>

                <ImageView
                    android:id="@id/iv_live_roleplayer_result_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/livevideo_roleplay_alertview_pic_xingxing5" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <!--匹配等待页-->
    <RelativeLayout
        android:id="@id/rl_live_roleplayer_matchpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b2000000"
        android:visibility="gone">
        <!--匹配动画3秒-->
        <RelativeLayout
            android:id="@id/rl_live_roleplayer_match_lottie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@id/lav_live_roleplayer_match"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_centerInParent="true"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="live_stand_roleplayer_match.json"
                    app:lottie_imageAssetsFolder="Images/roleplayer_match"
                    app:lottie_loop="true"
                    app:lottie_repeatMode="restart" />

                <com.xueersi.xesalib.view.image.CircleImageView
                    android:id="@id/civ_live_roleplayer_match_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_default_head_square" />
            </RelativeLayout>


            <TextView
                style="@style/text_font16_ffffff_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tv_live_roleplayer_match_tip2"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:text="正在匹配中" />

            <TextView
                android:id="@id/tv_live_roleplayer_match_tip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/shape_livevideo_roleplayer_match_tip_bg"
                android:paddingBottom="8dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="8dp"
                android:text="大家的对话会被录音，请认真朗读哦~"
                android:textColor="#36BC9B"
                android:textSize="11sp" />

        </RelativeLayout>

        <!--准备角色页-->
        <RelativeLayout
            android:id="@id/rl_live_roleplayer_rolelist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp"
            android:paddingLeft="130dp"
            android:paddingRight="130dp"
            android:paddingTop="20dp"
            android:visibility="gone">


            <!--角色分配列表-->
            <com.xueersi.xesalib.view.gridview.AutohGridview
                android:id="@id/gv_live_roleplayer_headshow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:horizontalSpacing="42dp"
                android:listSelector="#00000000"
                android:numColumns="3"
                android:verticalSpacing="25dp" />


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
