<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/livevideo_lightlive_course_card_bg">

        <TextView
            android:id="@+id/tv_course_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:textColor="@color/COLOR_212831"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="测试暑期班测试暑期班测试暑期班测试暑期班测试暑期班" />

        <TextView
            android:id="@+id/tv_course_card_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/tv_course_card_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/COLOR_858C96"
            android:textSize="12sp"
            tools:text="副标题" />

        <RelativeLayout
            android:id="@+id/fl_course_card_second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_course_card_date"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/tv_course_card_second_title"
                style="@style/text_font10_ffffff_style"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_corners_8_solid_e6bc7a"
                android:drawableStart="@drawable/ic_livevideo_course_card_publish"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxWidth="180dp"
                android:maxLines="1"
                android:paddingStart="1dp"
                android:paddingEnd="4dp"
                android:text=""
                tools:text="剑桥大学出版打造" />

            <TextView
                android:id="@+id/tv_course_card_difficult"
                style="@style/text_font10_ffffff_style"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toEndOf="@+id/tv_course_card_second_title"
                android:background="@drawable/shape_corners_8_solid_ff8f2c"
                android:drawableStart="@drawable/ic_livevideo_course_card_difficult"
                android:drawablePadding="3dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="1dp"
                android:paddingEnd="4dp"
                tools:text="难度1星" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_course_card_teacher_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl_course_card_second_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="16dp">

            <RelativeLayout
                android:id="@+id/rl_course_card_main_teacher_container"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginEnd="8dp">

                <com.xueersi.ui.widget.CircleImageView
                    android:id="@+id/iv_course_card_main_teacher_head"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:src="@drawable/defult_head_img" />

                <TextView
                    android:id="@+id/tv_course_card_main_teacher_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/iv_course_card_main_teacher_head"
                    android:hint="授课"
                    android:maxLines="1"
                    android:text="授课"
                    android:textSize="10dp"
                    android:textColor="@color/COLOR_858C96"
                    android:textColorHint="@color/COLOR_858C96" />

                <TextView
                    android:id="@+id/tv_course_card_main_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_course_card_main_teacher_desc"
                    android:layout_marginStart="8dp"
                    android:textSize="12dp"
                    android:textColor="@color/COLOR_858C96"
                    android:layout_toEndOf="@+id/iv_course_card_main_teacher_head"
                    android:maxLines="1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_course_card_foreign_teacher_container"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/rl_course_card_main_teacher_container">

                <com.xueersi.ui.widget.CircleImageView
                    android:id="@+id/iv_course_card_foreign_teacher_head"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:src="@drawable/defult_head_img" />

                <TextView
                    android:id="@+id/tv_course_card_foreign_teacher_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/iv_course_card_foreign_teacher_head"
                    android:hint="外教"
                    android:maxLines="1"
                    android:text="外教"
                    android:textSize="10dp"
                    android:textColor="@color/COLOR_858C96"
                    android:textColorHint="@color/COLOR_858C96" />

                <TextView
                    android:id="@+id/tv_course_card_foreign_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_course_card_foreign_teacher_desc"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/iv_course_card_foreign_teacher_head"
                    android:textSize="12dp"
                    android:textColor="@color/COLOR_858C96"
                    android:maxLines="1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_course_card_tutor_teacher_container"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toEndOf="@+id/rl_course_card_foreign_teacher_container">

                <com.xueersi.ui.widget.CircleImageView
                    android:id="@+id/iv_course_card_tutor_teacher_head"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    tools:src="@drawable/defult_head_img" />

                <TextView
                    android:id="@+id/tv_course_card_tutor_teacher_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/iv_course_card_tutor_teacher_head"
                    android:hint="辅导"
                    android:maxLines="1"
                    android:text="辅导"
                    android:textSize="10dp"
                    android:textColor="@color/COLOR_858C96"
                    android:textColorHint="@color/COLOR_858C96" />

                <TextView
                    android:id="@+id/tv_course_card_tutor_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_course_card_tutor_teacher_desc"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/iv_course_card_tutor_teacher_head"
                    android:textSize="12dp"
                    android:textColor="@color/COLOR_858C96"
                    android:maxLines="1" />
            </RelativeLayout>


        </RelativeLayout>


        <View
            android:id="@+id/v_course_card_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@+id/rl_course_card_teacher_container"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:background="@color/COLOR_F5F5F5" />

        <TextView
            android:id="@+id/tv_course_card_status"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/v_course_card_line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="12dp"
            android:textColor="@color/COLOR_FF5E50"
            tools:text="距离停售2天" />

        <com.xueersi.ui.widget.QanelasSoftTextView
            android:id="@+id/tv_course_card_original_price"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/v_course_card_line"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/tv_course_card_price"
            android:gravity="end|center_vertical"
            android:includeFontPadding="false"
            android:textSize="12dp"
            android:textColor="@color/COLOR_858C96"
            tools:text="5000" />

        <com.xueersi.ui.widget.QanelasSoftTextView
            android:id="@+id/tv_course_card_price"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/v_course_card_line"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textSize="16dp"
            android:textColor="@color/COLOR_FF5E50"
            tools:text="3000" />

    </RelativeLayout>

</FrameLayout>