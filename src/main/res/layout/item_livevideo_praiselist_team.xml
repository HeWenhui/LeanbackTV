<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_livevideo_praiselist_team_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/iv_livevideo_praiselist_team_medal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:id="@+id/tv_livevideo_praiselist_team_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_livevideo_praiselist_team_head"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#ffc44928"
            android:textSize="8dp" />

        <ImageView
            android:id="@+id/iv_livevideo_praiselist_team_like"
            android:layout_width="6dp"
            android:layout_height="7dp"
            android:layout_below="@+id/iv_livevideo_praiselist_team_head"
            android:layout_alignTop="@+id/tv_livevideo_praiselist_team_count"
            android:layout_alignBottom="@+id/tv_livevideo_praiselist_team_count"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@+id/tv_livevideo_praiselist_team_count"
            android:src="@drawable/icon_livevideo_praiselist_dianzan_team"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>