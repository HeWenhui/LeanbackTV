<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:clickable="true"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@id/tv_livevideo_middle_science_mygroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:text="组内"
        android:textColor="@color/COLOR_F13232"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@id/v_livevideo_rank_mygroup"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/COLOR_F13232"
        app:layout_constraintLeft_toLeftOf="@id/tv_livevideo_middle_science_mygroup"
        app:layout_constraintTop_toBottomOf="@id/tv_livevideo_middle_science_mygroup" />


    <TextView
        android:id="@id/tv_livevideo_middle_science_even"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连对"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_livevideo_middle_science_mygroup"
        app:layout_constraintRight_toRightOf="@id/tv_livevideo_middle_science_groups"
        app:layout_constraintTop_toTopOf="@id/tv_livevideo_middle_science_mygroup" />

    <View
        android:id="@id/v_livevideo_rank_mygroup"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/COLOR_F13232"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/tv_livevideo_middle_science_even"
        app:layout_constraintTop_toBottomOf="@id/tv_livevideo_middle_science_mygroup" />

    <TextView
        android:id="@id/tv_livevideo_middle_science_groups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="小组"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_livevideo_middle_science_mygroup" />

    <View
        android:id="@id/v_livevideo_rank_mygroup"
        android:layout_width="30dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/COLOR_F13232"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/tv_livevideo_middle_science_groups"
        app:layout_constraintTop_toBottomOf="@id/tv_livevideo_middle_science_groups" />

    <View
        android:id="@id/view_livevideo_middle_science_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_livevideo_middle_science_mygroup" />

    <TextView
        android:id="@id/tv_livevideo_middle_science_even_title_rank"
        style="@style/text_font11_ffffff_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:text="排名"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_livevideo_middle_science_line" />

    <TextView
        android:id="@id/tv_livevideo_middle_science_even_title_student"
        style="@style/text_font11_ffffff_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:text="学员"
        app:layout_constraintLeft_toRightOf="@id/tv_livevideo_middle_science_even_title_rank"
        app:layout_constraintTop_toTopOf="@id/tv_livevideo_middle_science_even_title_rank" />

    <TextView
        android:id="@id/tv_livevideo_middle_science_even_title_right"
        style="@style/text_font11_ffffff_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:text="正确率"
        app:layout_constraintRight_toLeftOf="@id/tv_livevideo_middle_science_even_title_like"
        app:layout_constraintTop_toTopOf="@id/tv_livevideo_middle_science_even_title_rank" />

    <TextView
        android:id="@id/tv_livevideo_middle_science_even_title_like"
        style="@style/text_font11_ffffff_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="点赞"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_livevideo_middle_science_even_title_rank" />

    <ListView
        android:id="@id/lv_livevideo_middle_science_list"
        style="@style/listview_common_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:divider="@color/transparent"
        android:dividerHeight="10dp" />
</android.support.constraint.ConstraintLayout>