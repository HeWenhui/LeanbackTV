<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@id/tv_livevideo_redpackage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/COLOR_97091D"
        android:textSize="12px" />

    <ImageView
        android:id="@id/iv_livevideo_redpackage_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_live_stand_red_gold_sma"
        android:layout_below="@id/tv_livevideo_redpackage_name" />

    <TextView
        android:id="@id/tv_livevideo_redpackage_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_livevideo_redpackage_name"
        android:layout_toRightOf="@id/iv_livevideo_redpackage_num"
        android:includeFontPadding="false"
        android:textColor="@color/COLOR_97091D"
        android:textSize="12px" />
</RelativeLayout>