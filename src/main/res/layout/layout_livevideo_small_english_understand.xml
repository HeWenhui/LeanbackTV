<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_livevideo_small_english_understand_board" />

        <ImageView
            android:id="@id/iv_livevideo_small_english_no_understand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="270dp"
            android:src="@drawable/selector_livevideo_small_english_nounderstand" />

        <ImageView
            android:id="@id/iv_livevideo_small_english_understand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="220dp"
            android:src="@drawable/selector_livevideo_small_english_understand" />
    </RelativeLayout>

    <ImageView
        android:id="@id/iv_livevideo_small_english_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:src="@drawable/selector_livevideo_small_english_close" />
</RelativeLayout>