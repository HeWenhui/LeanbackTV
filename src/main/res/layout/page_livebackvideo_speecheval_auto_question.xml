<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ppr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@id/rl_livevideo_speecteval_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@id/rl_livevideo_speecteval_title"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp">

                <ImageView
                    android:id="@id/iv_livevideo_speecteval_time_emoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_livevideo_speecteval_time"
                    android:layout_alignTop="@id/tv_livevideo_speecteval_time"
                    android:src="@drawable/bg_livevideo_speecteval_time_emoji1" />

                <TextView
                    android:id="@id/tv_livevideo_speecteval_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@id/iv_livevideo_speecteval_time_emoji"
                    android:textColor="@color/color_6462a2"
                    android:textSize="12dp" />

                <ProgressBar
                    android:id="@id/pb_livevideo_speecteval_time_prog"
                    style="@style/ProgressBar_live_speech"
                    android:layout_width="100dp"
                    android:layout_height="5dp"
                    android:layout_below="@id/tv_livevideo_speecteval_time" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eaebf9">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/rl_livevideo_speecteval_bg"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="6dp"
                android:background="@color/white">

                <LinearLayout
                    android:id="@id/ll_livevideo_speecteval_points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/sv_livevideo_speecteval_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/shape_livevideo_speech_point_bg" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_livevideo_speech_point_bg" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/shape_livevideo_speech_point_bg" />

                </LinearLayout>

                <View
                    android:id="@id/v_livevideo_speecteval_encourage"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <RelativeLayout
                    android:id="@id/rl_livevideo_speecteval_encourage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@id/tv_livevideo_speecteval_encourage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:text="Great"
                        android:textColor="#ff6c3f"
                        android:textSize="30dp" />
                </RelativeLayout>

                <ScrollView
                    android:id="@id/sv_livevideo_speecteval_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_livevideo_speecteval_encourage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:paddingTop="34dp">

                    <TextView
                        android:id="@id/tv_livevideo_speecteval_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="10dp"
                        android:textColor="@color/COLOR_333333"
                        android:textSize="20dp"/>

                </ScrollView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@id/rl_livevideo_speecteval_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:id="@id/rl_livevideo_speecteval_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:gravity="center_horizontal"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@id/iv_livevideo_speecteval_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/bg_livevideo_speecteval_error" />

                    <TextView
                        android:id="@id/tv_livevideo_speecteval_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/iv_livevideo_speecteval_error"
                        android:textColor="#ff3333"
                        android:textSize="12sp" />
                </RelativeLayout>

                <com.xueersi.parentsmeeting.modules.livevideo.widget.VolumeWaveView
                    android:id="@id/vwv_livevideo_speecteval_wave"
                    android:layout_width="250dp"
                    android:layout_height="90dp"
                    android:layout_below="@+id/rl_livevideo_speecteval_error"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@id/rl_livevideo_speecteval_countdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#a8eaebf9">

            <TextView
                android:id="@id/tv_livevideo_speecteval_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/color_6462a2"
                android:textSize="160dp"
                android:visibility="invisible" />

            <TextView
                android:id="@id/tv_livevideo_speecteval_countdown2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/color_6462a2"
                android:textSize="160dp"
                android:visibility="invisible" />

            <TextView
                android:id="@id/tv_livevideo_speecteval_countdown3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/color_6462a2"
                android:textSize="160dp"
                android:visibility="invisible" />

            <TextView
                android:id="@id/tv_livevideo_speecteval_countdown4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="GO"
                android:textColor="@color/color_6462a2"
                android:textSize="160dp"
                android:visibility="invisible" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@id/v_live_star_result_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.xueersi.parentsmeeting.modules.livevideo.widget.StartProgress
        android:id="@id/sp_live_star_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_live_star_result_bg"
        android:visibility="invisible">

        <ImageView
            android:id="@id/iv_live_star_result_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_live_star_result_light" />

        <ImageView
            android:id="@id/iv_live_star_result_point_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_live_star_result_point_static" />

        <ImageView
            android:id="@id/iv_live_star_result_point_dynamic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_live_star_result_point_dynamic1" />

        <ImageView
            android:id="@id/iv_live_star_result_point_dynamic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_live_star_result_point_dynamic2" />

        <ImageView
            android:id="@id/iv_live_star_result_point_dynamic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_live_star_result_point_dynamic3" />

        <ImageView
            android:id="@id/iv_live_star_result_point_dynamic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_live_star_result_point_dynamic4" />

        <LinearLayout
            android:id="@id/ll_live_star_progress_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/live_speech_star_top"
                android:src="@drawable/bg_live_star_grey" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/live_speech_star_left"
                android:layout_marginTop="@dimen/live_speech_star_top"
                android:src="@drawable/bg_live_star_grey" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/live_speech_star_left"
                android:layout_marginTop="@dimen/live_speech_star_top"
                android:src="@drawable/bg_live_star_grey" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/live_speech_star_left"
                android:layout_marginTop="@dimen/live_speech_star_top"
                android:src="@drawable/bg_live_star_grey" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/live_speech_star_left"
                android:layout_marginTop="@dimen/live_speech_star_top"
                android:src="@drawable/bg_live_star_grey" />
        </LinearLayout>

        <com.xueersi.parentsmeeting.modules.livevideo.widget.SpeechStrokeTextView
            android:id="@id/tv_live_star_result_sorce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="90分"
            android:textColor="#ffe100"
            android:textSize="50sp" />

        <RelativeLayout
            android:id="@id/rl_live_star_result_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@id/ll_live_star_result_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_live_star_result_fluent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@id/iv_live_star_result_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_live_star_result_count" />

                <TextView
                    android:id="@id/tv_live_star_result_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="+3枚"
                    android:textColor="#ffe100"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@id/tv_live_star_result_fluent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="流畅性:90"
                android:textColor="#ffe100"
                android:textSize="20sp" />

            <TextView
                android:id="@id/tv_live_star_result_accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_live_star_result_fluent"
                android:text="准确性:90"
                android:textColor="#ffe100"
                android:textSize="20sp" />
        </RelativeLayout>
    </com.xueersi.parentsmeeting.modules.livevideo.widget.StartProgress>
</RelativeLayout>