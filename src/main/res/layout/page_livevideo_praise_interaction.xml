<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_livevideo_praise_interac_praise_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/livevideo_praise_interac_praise_btn_margin_bottom"
        android:layout_marginRight="@dimen/livevideo_praise_interac_praise_btn_margin_right"
        android:src="@drawable/livevideo_right_dianzan_btn_normal" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/iv_livevideo_praise_interac_press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/livevideo_praise_interac_praise_btn_margin_bottom"
        android:layout_marginRight="@dimen/livevideo_praise_interac_praise_btn_margin_right"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_livevideo_praise_interac_breath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/livevideo_praise_interac_praise_btn_margin_bottom"
        android:layout_marginRight="@dimen/livevideo_praise_interac_praise_btn_margin_right"
        android:background="@drawable/bg_layer_list"
        android:visibility="gone" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_livevideo_praise_interac_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_livevideo_praise_interac_praise_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_livevideo_praise_interac_bubble_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_livevideo_praise_interac_praise_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp" />


</RelativeLayout>