<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_livevideo_praise_interac_praise_btn"
        android:layout_width="@dimen/livevideo_praise_interac_praise_btn_width"
        android:layout_height="@dimen/livevideo_praise_interac_praise_btn_width"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/livevideo_praise_interac_praise_btn_margin_bottom"
        android:layout_marginRight="@dimen/livevideo_praise_interac_praise_btn_margin_right"
        android:src="@drawable/livevideo_right_dianzan_btn_normal"
        android:visibility="invisible" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/iv_livevideo_praise_interac_press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_livevideo_praise_interac_breath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/livevideo_praise_interac_praise_btn_margin_bottom"
        android:layout_marginRight="@dimen/livevideo_praise_interac_praise_btn_margin_right"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lav_livevideo_praise_interac_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_livevideo_praise_interac_praise_btn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/livevideo_praise_interac_praise_btn_margin_right"
        android:background="@drawable/shape_livevideo_praise_interaction_num"
        android:gravity="center"
        android:textColor="@color/COLOR_FFFFFF"
        android:textSize="12sp"
        android:visibility="gone" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_livevideo_praise_interac_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_livevideo_praise_interac_praise_btn"
        android:layout_alignParentRight="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_livevideo_praise_interac_bubble_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_livevideo_praise_interac_praise_btn"
        android:layout_alignParentRight="true" />


    <RelativeLayout
        android:id="@+id/rl_livevideo_praise_interac_gift_send_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_livevideo_praise_interac_praise_btn"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="62dp"
        android:background="@color/COLOR_000000"
        android:paddingBottom="10dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_livevideo_praise_interac_gift_send_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="成功送出'魔法水'"
            android:textColor="@color/COLOR_FFFFFF"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_livevideo_praise_interac_gift_send_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/livevideo_alert_gold_icon_normal" />

            <TextView
                android:id="@+id/tv_livevideo_praise_interac_gift_send_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="368"
                android:textColor="@color/COLOR_FFFFFF"
                android:textSize="10sp" />


        </LinearLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_livevideo_praise_interac_special_gift_group"
        android:layout_width="95dp"
        android:layout_height="140dp"
        android:layout_above="@id/iv_livevideo_praise_interac_praise_btn"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="62dp"
        android:background="@color/COLOR_000000"
        android:visibility="gone">

        <ImageView
            android:id="@+id/lav_livevideo_praise_interac_special_gift_img"
            android:layout_width="47dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27dp"
            android:src="@drawable/livevideo_alert_chemistry_icon_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_livevideo_praise_interac_special_gift_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="10s关闭"
                android:textColor="@color/COLOR_FFFFFF"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_livevideo_praise_interac_special_gift_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/livevideo_alert_close_icon_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_livevideo_praise_interac_special_gift_send_group"
                android:layout_width="75dp"
                android:layout_height="21dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_livevideo_praise_interaction_send">

                <TextView
                    android:id="@+id/tv_livevideo_praise_interac_special_gift_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/livevideo_alert_gold_icon_normal"
                    android:drawablePadding="5dp"
                    android:text="10"
                    android:textColor="@color/COLOR_FFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_livevideo_praise_interac_special_gift_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="赠送"
                    android:textColor="@color/COLOR_FFFFFF"
                    android:textSize="10sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_livevideo_praise_interac_math_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="金币余额: 241"
                android:textColor="@color/COLOR_FFFFFF"
                android:textSize="9sp" />

        </LinearLayout>

    </FrameLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_livevideo_praise_interac_math"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lav_livevideo_praise_interac_physical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_livevideo_praise_interac_chemistry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/anim_livevido_praise_interaction_chemistry"
        android:visibility="gone" />
</RelativeLayout>