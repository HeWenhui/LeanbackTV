<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent_80"
        android:visibility="gone">

        <TextView
            android:id="@id/tv_livevideo_voiceans_title"
            style="@style/text_font12_ffffff_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="请说出正确答案" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_livevideo_open_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp">


        <com.xueersi.parentsmeeting.widget.VolumeWaveView
            android:id="@id/vwv_livevideo_speecteval_wave"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/iv_livevideo_feedback_wave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


    </FrameLayout>

</RelativeLayout>