<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/rl_live_roleplayer_result_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b2000000"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="362dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_livevideo_roleplayer_result_qizhi"
            android:layout_marginTop="-50dp"
            android:background="@drawable/shape_livevideo_roleplayer_result">

            <TextView
                android:id="@id/tv_livevideo_roleplayer_result_totalscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:textColor="#F13232"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@id/tv_livevideo_roleplayer_result_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_livevideo_roleplayer_result_totalscore"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/livevideo_roleplay_alertview_like_ic" />

                        <TextView
                            android:id="@id/tv_livevideo_roleplayer_result_dz_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="28dp"
                            android:textColor="#2CB3E7"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@id/tv_livevideo_roleplayer_result_fluency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="流畅性:"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                </LinearLayout>


                <com.xueersi.ui.widget.CircleImageView
                    android:id="@id/civ_livevideo_roleplayer_result_headimg"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/ic_default_head_square"
                    app:border_color="#FAD2D1"
                    app:border_width="4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/livevideo_roleplay_alertview__ic" />

                        <TextView
                            android:id="@id/tv_livevideo_roleplayer_result_gold_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="28dp"
                            android:textColor="#F09429"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@id/tv_livevideo_roleplayer_result_accuracy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="准确性:"
                        android:textColor="#666666"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_livevideo_roleplayer_result_head"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp"
                android:background="#FFF4F4F4"
                android:orientation="horizontal"
                android:paddingLeft="19dp"
                android:paddingTop="5dp"
                android:paddingRight="19dp"
                android:paddingBottom="5dp">


                <RelativeLayout
                    android:id="@id/rl_livevideo_roleplayer_result_role_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.xueersi.ui.widget.CircleImageView
                        android:id="@id/civ_livevideo_roleplayer_result_role_head_1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_default_head_square" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/civ_livevideo_roleplayer_result_role_head_1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@id/tv_livevideo_roleplayer_result_role_score_1"
                            style="@style/text_font11_333333_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="96分" />

                        <TextView
                            android:id="@id/tv_livevideo_roleplayer_result_role_nickname_1"
                            style="@style/text_font11_333333_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:maxLength="5"
                            android:singleLine="true"
                            android:text="我是小可爱1" />
                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/rl_livevideo_roleplayer_result_role_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.xueersi.ui.widget.CircleImageView
                        android:id="@id/civ_livevideo_roleplayer_result_role_head_2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_default_head_square" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/civ_livevideo_roleplayer_result_role_head_2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@id/tv_livevideo_roleplayer_result_role_score_2"
                            style="@style/text_font11_333333_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="96分" />

                        <TextView
                            android:id="@id/tv_livevideo_roleplayer_result_role_nickname_2"
                            style="@style/text_font11_333333_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:maxLength="5"
                            android:singleLine="true"
                            android:text="我是小可爱1" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/rl_livevideo_roleplayer_result_role_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.xueersi.ui.widget.CircleImageView
                        android:id="@id/civ_livevideo_roleplayer_result_role_head_3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_default_head_square" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/civ_livevideo_roleplayer_result_role_head_3"
                        android:orientation="vertical">

                        <TextView
                            android:id="@id/tv_livevideo_roleplayer_result_role_score_3"
                            style="@style/text_font11_333333_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="96分" />

                        <TextView
                            android:id="@id/tv_livevideo_roleplayer_result_role_nickname_3"
                            style="@style/text_font11_333333_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:maxLength="5"
                            android:singleLine="true"
                            android:text="我是小可爱1" />
                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@id/rl_livevideo_roleplayer_result_qizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_live_roleplayer_result_star"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-15dp">


            <TextView
                android:id="@id/tv_livevideo_roleplayer_result_msgtip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/livevideo_roleplay_alertview_pic_bg"
                android:gravity="center_horizontal"
                android:paddingTop="4dp"
                android:text="Fantastic"
                android:textColor="@color/white"
                android:textSize="29sp" />

        </RelativeLayout>

        <ImageView
            android:id="@id/iv_live_roleplayer_result_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/livevideo_roleplay_alertview_pic_xingxing5" />

    </RelativeLayout>

</RelativeLayout>
