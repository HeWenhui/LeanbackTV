<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_livevideo_betterme_introduction_bg"
        android:layout_width="500dp"
        android:layout_height="375dp"
        android:layout_centerInParent="true"
        android:src="@drawable/shellwindow_sendflower_board" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_livevideo_betterme_introduction_bg"
        android:layout_alignTop="@id/iv_livevideo_betterme_introduction_bg"
        android:layout_alignRight="@id/iv_livevideo_betterme_introduction_bg"
        android:layout_alignBottom="@id/iv_livevideo_betterme_introduction_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开口时长"
                    android:textColor="#ffe65c00"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目标"
                    android:textColor="#ff756565"
                    android:textSize="6sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>