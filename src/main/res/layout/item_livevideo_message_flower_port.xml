<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                android:layout_weight="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_livevideo_flower_right"/>

    <TextView
        android:id="@id/tv_livevideo_message_flower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_livevideo_message_flower2"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/black66"
        android:textSize="14sp"/>

    <TextView
        android:id="@id/tv_livevideo_message_flower2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textSize="14sp"/>

    <ImageView
        android:id="@id/iv_livevideo_message_flower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_livevideo_message_flower"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"/>

    <CheckBox
        android:id="@id/ck_livevideo_message_flower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:button="@drawable/selector_red_cb_bg_40"/>
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@color/borderline"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/borderline"/>
</RelativeLayout>