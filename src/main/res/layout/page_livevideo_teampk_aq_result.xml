<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:id="@id/rl_answer_question_award_root"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_livevideo_teampk_aq_result_bg"
        android:visibility="invisible">

        <ImageView
            android:id="@id/iv_answer_question_energy"
            android:layout_width="20dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/livevideo_tool_energy_img_disable" />

        <TextView
            android:id="@id/tv_answer_question_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_answer_question_energy"
            android:text="+10"
            android:textColor="@color/COLOR_000000"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@id/tv_answer_question_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:text="+10"
            android:textColor="@color/COLOR_000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@id/iv_answer_question_coin"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_answer_question_coin"
            android:src="@drawable/livevideo_tool_gold_img_disable" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@id/rl_vote_award_root"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_livevideo_teampk_aq_result_bg"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@id/iv_vote_award_energy"
                android:layout_width="20dp"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:src="@drawable/livevideo_tool_energy_img_disable" />

            <TextView
                android:id="@id/tv_vote_award_energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_vote_award_energy"
                android:text="+10"
                android:textColor="@color/COLOR_000000"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_alpha_black"
        android:visibility="invisible"
        android:id="@id/cstl_teampk_praise_answer_right"
       >
        <!--表扬全对 lottieView-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@id/lav_teampk_praise_anwser_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.constraint.Guideline
            android:id="@id/gl_teampk_praise_answer_top_guide_line"
            app:layout_constraintGuide_percent="0.546"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl_teampk_praise_answer_top_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@id/iv_teampk_praise_energy"
                android:layout_width="19dp"
                android:layout_height="25dp"
                android:src="@drawable/livevideo_tool_energy_img_disable"
                android:visibility="invisible" />

            <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
                android:id="@id/tv_teampk_praise_energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="+10"
                android:textColor="#FF6700"
                android:textSize="24dp"
                android:visibility="invisible" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</RelativeLayout>