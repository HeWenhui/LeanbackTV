<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_miracast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F4"
    android:orientation="vertical">

    <include layout="@layout/include_app_title_main" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#D6E6BC7A"
        android:gravity="center_vertical"
        android:paddingLeft="36dp"
        android:text="当前使用WIFI连接"
        android:textColor="#FE9B43"
        android:textSize="12sp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="158dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:background="@drawable/bg_letou_describe_shape">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rc_device"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="50dp">

                </android.support.v7.widget.RecyclerView>
                <TextView
                    android:id="@+id/letou_describe_searching"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="14dp"
                    android:textSize="14sp"
                    android:textColor="#ADB4BE"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="28dp"
                android:background="@drawable/bg_letou_describe_shape"
                android:padding="8dp">

                <WebView
                    android:id="@+id/letou_describe_webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>