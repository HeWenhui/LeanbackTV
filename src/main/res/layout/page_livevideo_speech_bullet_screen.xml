<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/rl_livevideo_speechbul_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@id/rl_livevideo_speechbul_bottom_content"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_alignParentBottom="true"
        android:background="#2B1D1A"
        android:alpha="0.92">

        <TextView
            android:id="@id/tv_livevideo_speechbul_title"
            style="@style/text_font16_ffffff_style"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="语音录入中（15字以内）"
            android:visibility="gone"/>

        <ImageView
            android:id="@id/tv_livevideo_speechbul_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/cy_main_guanbibai_icon_normal" />

        <com.xueersi.parentsmeeting.widget.VolumeWaveView
            android:id="@id/vwv_livevideo_speechbul_wave"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/tv_livevideo_speechbul_title"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:visibility="gone"/>

        <!--<cn.dreamtobe.kpswitch.widget.KPSwitchPanelLinearLayout-->
            <!--android:id="@+id/rl_livevideo_speechbul_panelroot"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/panel_height"-->
            <!--android:layout_below="@id/rv_livevideo_speechbul_root"-->
            <!--android:visibility="gone">-->
            <!--&lt;!&ndash; 面板内容 &ndash;&gt;-->
            <!--...-->
        <!--</cn.dreamtobe.kpswitch.widget.KPSwitchPanelLinearLayout>-->
        <RelativeLayout
            android:id="@id/rl_livevideo_speechbul_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_below="@id/tv_livevideo_speechbul_title">

            <EditText
                android:id="@id/et_livevideo_speechbul_words"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                style="@style/text_font14_ffffff_style"
                android:layout_toLeftOf="@id/tv_livevideo_speechbul_send"
                android:paddingLeft="21dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_livevideo_speechbul_words_bg"
                android:imeOptions="flagNoFullscreen|flagNoExtractUi"
                android:singleLine="true"
                android:text="白日依山尽，黄河入河流"/>
            <TextView
                android:id="@id/tv_livevideo_speechbul_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_livevideo_speechbul_send"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                style="@style/text_font13_ffffff_style"
                android:text="10/15"/>
            <TextView
                android:id="@id/tv_livevideo_speechbul_send"
                android:layout_width="75dp"
                android:layout_height="41dp"
                android:gravity="center"
                style="@style/text_font17_ffffff_style"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_livevideo_speechbul_send_bg"
                android:text="发送" />
        </RelativeLayout>
        <TextView
            android:id="@id/tv_livevideo_speechbul_repeat"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:paddingLeft="19dp"
            android:paddingRight="19dp"
            android:background="@drawable/shape_livevideo_speechbul_repeat_bg"
            android:layout_below="@id/rl_livevideo_speechbul_input"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="重说"/>

    </RelativeLayout>

    <master.flame.danmaku.danmaku.ui.widget.DanmakuView
        android:id="@id/dv_livevideo_speechbul_danmaku"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="17dp"
        android:visibility="gone"/>

</RelativeLayout>
