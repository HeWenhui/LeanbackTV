<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <ImageView
        android:id="@+id/iv_lightlive_recommend_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_main_default_head_image"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_lightlive_recommend_head"
        android:layout_toLeftOf="@+id/tv_lightlive_recommend_buy"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="6dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_lightlive_recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="@color/COLOR_212831"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="世界冠军王鹰豪-魔方课课咔咔咔咔咔咔扩"
            />
        <TextView
            android:id="@+id/tv_lightlive_recommend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/COLOR_858C96"
            android:singleLine="true"
            android:text="授课：王鹰ddddddddddddddddddddddddddddddddddddddddddddddd豪"
            android:layout_marginRight="90dp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_lightlive_recommend_buy"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:background="@drawable/cs_btn_red_28dp_center"
        android:text="立即报名"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        />

</RelativeLayout>