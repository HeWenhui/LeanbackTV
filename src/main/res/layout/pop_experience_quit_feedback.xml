<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="520dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_popupwin"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="202dp">

            <TextView
                android:id="@+id/tv_experience_quit_title"
                style="@style/text_font17_333333_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="方便告诉我们你离开课堂的原因吗？" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_experience_quit_title"
                android:layout_marginTop="23dp">

                <TableRow
                    android:layout_marginBottom="18dp">
                    <CheckBox
                        android:id="@+id/cb_item_1"
                        style="@style/style_experience_quit_radiobutton"
                        android:layout_marginLeft="30dp"
                        android:text="课程过于简单" />

                    <CheckBox
                        android:id="@+id/cb_item_2"
                        style="@style/style_experience_quit_radiobutton"
                        android:text="课程过于困难" />
                </TableRow>

                <TableRow
                    android:layout_marginBottom="18dp">

                    <CheckBox
                        android:id="@+id/cb_item_3"
                        style="@style/style_experience_quit_radiobutton"
                        android:layout_marginLeft="30dp"
                        android:text="不喜欢授课老师" />

                    <CheckBox
                        android:id="@+id/cb_item_4"
                        style="@style/style_experience_quit_radiobutton"
                        android:layout_width="217dp"
                        android:text="课堂内容与所学内容不匹配" />
                </TableRow>
                <TableRow
                    android:layout_marginBottom="18dp">
                    <CheckBox
                        android:id="@+id/cb_item_5"
                        style="@style/style_experience_quit_radiobutton"
                        android:layout_marginLeft="30dp"
                        android:text="其他"
                         />
                </TableRow>
            </TableLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/COLOR_DCDCDC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <Button
                android:id="@+id/btn_back_class"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="返回课堂"
                android:textColor="@color/COLOR_666666"
                android:textSize="16sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/COLOR_DCDCDC" />

            <Button
                android:id="@+id/btn_leave_class"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="确定离开"
                android:textColor="@color/COLOR_999999"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>