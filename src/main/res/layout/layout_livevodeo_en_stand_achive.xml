<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="23dp">

    <RelativeLayout
        android:id="@id/rl_livevideo_en_stand_achive__content"
        android:layout_width="177dp"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@id/rl_livevideo_en_achive_stand_bg"
            android:layout_width="177dp"
            android:layout_height="155dp"
            android:layout_marginTop="30dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="177dp"
                android:layout_height="140dp"
                android:background="@drawable/shape_live_en_stand_achive_bg">

                <RelativeLayout
                    android:id="@id/rl_livevideo_en_achive_stand_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="29dp">

                    <RelativeLayout
                        android:id="@id/rl_livevideo_en_achive_num_fire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@id/iv_livevideo_en_achive_num_fire"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:src="@drawable/livevideo_enteampk_benchangchengjiu_fair1_img_nor" />

                        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
                            android:id="@id/tv_livevideo_en_achive_num_fire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/iv_livevideo_en_achive_num_fire"
                            android:layout_alignBottom="@id/iv_livevideo_en_achive_num_fire"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@id/iv_livevideo_en_achive_num_fire"
                            android:gravity="center_vertical"
                            android:includeFontPadding="false"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@id/iv_livevideo_en_achive_num_star"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@id/rl_livevideo_en_achive_num_fire"
                        android:src="@drawable/livevideo_enteampk_benchangchengjiu_star_img_nor_stand" />

                    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
                        android:id="@id/tv_livevideo_en_achive_num_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/iv_livevideo_en_achive_num_star"
                        android:layout_alignBottom="@id/iv_livevideo_en_achive_num_star"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/iv_livevideo_en_achive_num_star"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@id/iv_livevideo_en_achive_num_gold"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@id/tv_livevideo_en_achive_num_gold"
                        android:src="@drawable/livevideo_enteampk_benchangchengjiu_gold1_img_nor" />

                    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
                        android:id="@id/tv_livevideo_en_achive_num_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/iv_livevideo_en_achive_num_star"
                        android:layout_alignBottom="@id/iv_livevideo_en_achive_num_star"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/rl_livevideo_en_achive_num_fire"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </RelativeLayout>

                <ViewStub
                    android:id="@id/vs_livevideo_en_achive_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_livevideo_en_achive_stand_content"
                    android:layout="@layout/layout_livevodeo_en_achive_stand_pk" />

                <ViewStub
                    android:id="@id/vs_livevideo_en_achive_bottom2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_livevideo_en_achive_stand_content"
                    android:layout="@layout/layout_livevodeo_en_achive_stand_nopk" />
            </RelativeLayout>

        </FrameLayout>

        <CheckBox
            android:id="@id/cb_livevideo_en_stand_achive_title"
            android:layout_width="152dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_live_en_stand_achive_open"
            android:button="@null"
            android:checked="false" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/ll_livevideo_en_stand_achive_user_head_imge"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_stand_livevideo_heads_right_normal"
        android:gravity="center">

        <com.xueersi.ui.widget.CircleImageView
            android:id="@id/iv_livevideo_en_stand_achive_user_head_imge"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_default_head_square"
            app:border_color="@android:color/transparent"
            app:border_width="0dp" />
    </LinearLayout>

</RelativeLayout>