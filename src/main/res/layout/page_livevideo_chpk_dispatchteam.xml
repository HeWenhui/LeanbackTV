<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/shape_corners_7dp_b3000000"
        android:orientation="vertical"
        android:padding="20dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@id/lav_teampk_team_select"
            android:layout_width="165dp"
            android:layout_height="134dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/livevideo_chpk_dispatchteam"
            android:textColor="@color/COLOR_FFFFFF"
            android:textSize="13sp" />

        <ImageView
            android:id="@id/iv_teampk_enter_teamselect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/livevideo_chpk_clickenter" />

    </LinearLayout>

</FrameLayout>