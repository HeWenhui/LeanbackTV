<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.xueersi.ui.widget.CircleImageView
        android:id="@+id/iv_item_livevideo_betterme_energy_head"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/app_livevideo_enteampk_boy_bg_img_nor" />

    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
        android:id="@+id/tv_item_livevideo_betterme_energy_name"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="11dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="11dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_livevideo_betterme_energybonus_fire" />

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:id="@+id/tv_item_livevideo_betterme_energy_fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFDF95"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </LinearLayout>

</LinearLayout>