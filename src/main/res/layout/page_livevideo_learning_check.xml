<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

    <com.xueersi.parentsmeeting.modules.livevideo.widget.LiveVideoFloatTitle
        android:id="@id/lrf_livevideo_evaluate_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:floattitle="课程感受"
        app:showcancle="false"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/lrf_livevideo_evaluate_title"
        android:background="@drawable/shape_livevideo_evaluate_bg"
        android:paddingBottom="10dp">

        <TextView
            android:id="@id/tv_livevideo_learnreport_check_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="42dp"
            android:text="XX同学，我是XX老师"
            android:textColor="@color/COLOR_333333"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <View
            android:id="@id/v_livevideo_learnreport_check_borderline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_livevideo_learnreport_check_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:background="@color/COLOR_DCDCDC"/>

        <TextView
            android:id="@id/tv_livevideo_learnreport_check_generate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_livevideo_learnreport_check_borderline"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:text="本课堂的学习报告已经生成"
            android:textColor="@color/COLOR_E74C3C"
            android:textSize="20sp"/>

        <TextView
            android:id="@id/tv_livevideo_learnreport_check_tip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_livevideo_learnreport_check_generate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:text="同时，别忘了对AA老师的教学进行点评"
            android:textColor="@color/COLOR_666666"
            android:textSize="14sp"/>

        <Button
            android:id="@id/bt_livevideo_learnreport_check"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_livevideo_learnreport_check_tip1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_dialog_select_button"
            android:text="查看学习报告"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </RelativeLayout>

</RelativeLayout>