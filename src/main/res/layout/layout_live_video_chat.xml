<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/rl_livevideo_chat_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/live_task_pic_bg_normal"
        android:padding="0dp">

        <RelativeLayout
            android:id="@id/rl_livevideo_chat_content_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@id/rl_livevideo_chat_raisehand_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <RelativeLayout
                    android:id="@id/rl_livevideo_chat_raisehand_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@id/tv_livevideo_chat_people_hind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@id/tv_livevideo_chat_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前举手234人，等待连麦中..."
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/rl_livevideo_chat_raisehand_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:visibility="invisible">

                    <TextView
                        android:id="@id/tv_livevideo_chat_people_grey_hind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@id/tv_livevideo_chat_people_grey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前举手234人，等待连麦中..."
                        android:textColor="@color/grey"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@id/tv_livevideo_chat_in_queue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_livevideo_chat_people_grey"
                        android:layout_marginTop="3dp"
                        android:text="举手成功，已进入队列"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@id/ll_livevideo_chat_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rl_livevideo_chat_raisehand_status"
                android:orientation="horizontal" />

            <RelativeLayout
                android:id="@id/rl_livevideo_chat_raisehand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/ll_livevideo_chat_people">

                <Button
                    android:id="@id/bt_livevideo_chat_raisehand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/live_task_jushou_icon_normal" />

                <TextView
                    android:id="@id/tv_livevideo_chat_raisehand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bt_livevideo_chat_raisehand"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp"
                    android:text="举手"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@id/iv_livevideo_chat_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/rl_livevideo_chat_content_left"
            android:src="@drawable/live_task_zuo_icon_normal" />
    </RelativeLayout>

</RelativeLayout>