<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="100dp" >

    <TextView
        android:id="@id/tv_livevideo_chat_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="当前直播人数" />

    <Button
        android:id="@id/bt_livevideo_chat_raisehand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_livevideo_chat_people"
        android:text="举手" />

    <Button
        android:id="@id/bt_livevideo_chat_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/bt_livevideo_chat_raisehand"
        android:text="缩小" />
</RelativeLayout>