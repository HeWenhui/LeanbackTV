<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_livevideo_betterme_introduction_bg"
        android:layout_width="500dp"
        android:layout_height="375dp"
        android:layout_centerInParent="true"
        android:src="@drawable/shellwindow_sendflower_board" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_livevideo_betterme_introduction_bg"
        android:layout_alignTop="@id/iv_livevideo_betterme_introduction_bg"
        android:layout_alignRight="@id/iv_livevideo_betterme_introduction_bg"
        android:layout_alignBottom="@id/iv_livevideo_betterme_introduction_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="段位展示"
            android:textColor="#ffe65c00"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="倔强青铜"
                    android:textColor="#ff5bb383"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每完成3次目标升1星"
                    android:textColor="#ffe65c00"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满3星升级"
                    android:textColor="#ffffedb1"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="勤奋白银"
                    android:textColor="#ff8691a3"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每完成4次目标升1星"
                    android:textColor="#ffe65c00"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满3星升级"
                    android:textColor="#ffffedb1"
                    android:textSize="10sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="段位徽章会在直播间头像上显示"
            android:textColor="#ff8c8080"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>