<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@id/tv_livevideo_vote_result_count"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="99% 1000äºº"
        android:textColor="@color/COLOR_333333"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@id/pb_livevideo_vote_result_item"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_livevideo_vote_result_item"
        android:layout_below="@id/tv_livevideo_vote_result_count"
        android:layout_centerHorizontal="true"
        android:indeterminateOnly="false"
        android:max="100"
        android:progressDrawable="@drawable/shape_live_vote_prog_max" />

    <TextView
        android:id="@id/tv_livevideo_vote_result_item"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="A"
        android:textColor="#f45a61"
        android:textSize="18sp" />
</RelativeLayout>