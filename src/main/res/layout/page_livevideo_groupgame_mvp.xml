<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@id/rl_livevideo_groupgame_mvp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@id/iv_livevideo_groupgame_mvp_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/livevideo_group_game_mvp_bg" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@id/lav_livevideo_groupgame_mvp_cloud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@id/lav_livevideo_groupgame_mvp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom" />

    </FrameLayout>

    <ImageView
        android:id="@id/iv_livevideo_groupgame_mvp_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_livevide_groupgame_mvp_close" />

    <com.xueersi.parentsmeeting.modules.livevideo.widget.TimeCountDowTextView
        android:id="@+id/tv_livevideo_groupgame_mvp_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_livevideo_groupgame_mvp_close"
        android:layout_alignBottom="@id/iv_livevideo_groupgame_mvp_close"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/iv_livevideo_groupgame_mvp_close"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:textSize="18dp" />

</RelativeLayout>