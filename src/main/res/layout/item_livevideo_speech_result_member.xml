<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@id/rl_live_speech_result_member_head"
        android:layout_width="28dp"
        android:layout_height="28dp">

        <com.xueersi.ui.widget.CircleImageView
            android:id="@id/civ_live_speech_result_member_head"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            app:border_width="0dp" />

    </RelativeLayout>

    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
        android:id="@id/tv_live_speech_result_member_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/rl_live_speech_result_member_head"
        android:includeFontPadding="false"
        android:text="96分"
        android:textColor="#ff756565"
        android:textSize="14sp" />

    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
        android:id="@id/tv_live_speech_result_member_name"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rl_live_speech_result_member_head"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/rl_live_speech_result_member_head"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="我是小可..."
        android:textColor="#ff8F7F80"
        android:textSize="11sp" />
</RelativeLayout>