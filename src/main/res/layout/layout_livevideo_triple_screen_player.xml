<?xml version="1.0" encoding="utf-8"?>
<com.xueersi.parentsmeeting.module.videoplayer.media.CenterLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/cl_course_video_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:background="@color/COLOR_000000">

    <ViewStub
        android:id="@id/vs_course_video_video_texture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_live_texture" />
    <!-- 播放器 -->

    <com.xueersi.parentsmeeting.modules.livevideo.widget.LiveVideoView
        android:id="@id/vv_course_video_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:saveEnabled="true" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_livevideo_triple_screen_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/COLOR_3C000000"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_livevideo_triple_screen_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/anim_livevideo_triple_screen_loading"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:id="@+id/tv_livevideo_triple_screen_loading_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginRight="100dp"
            android:text="视频出现卡顿，可尝试点击屏幕中的"
            android:textColor="@color/COLOR_FFFFFF"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_livevideo_triple_screen_loading" />

        <ImageView
            android:id="@+id/iv_livevideo_triple_screen_loading_icon_middle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/bg_livevideo_normal_swich_flow"
            app:layout_constraintBottom_toBottomOf="@+id/tv_livevideo_triple_screen_loading_left"
            app:layout_constraintLeft_toRightOf="@+id/tv_livevideo_triple_screen_loading_left"
            app:layout_constraintTop_toTopOf="@+id/tv_livevideo_triple_screen_loading_left" />

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:id="@+id/tv_livevideo_triple_scrren_loading_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="切换线路"
            android:textColor="@color/COLOR_FFFFFF"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_livevideo_triple_screen_loading_icon_middle"
            app:layout_constraintLeft_toRightOf="@+id/iv_livevideo_triple_screen_loading_icon_middle"
            app:layout_constraintTop_toTopOf="@+id/iv_livevideo_triple_screen_loading_icon_middle" />


    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@id/rl_course_video_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone">

            <ProgressBar
                android:id="@id/probar_course_video_loading_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:indeterminateDrawable="@drawable/animlst_video_loading" />

            <TextView
                android:id="@id/tv_course_video_loading_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/probar_course_video_loading_progress"
                android:layout_centerHorizontal="true"
                android:paddingTop="7.0dip"
                android:text="@string/video_layout_loading"
                android:textColor="@android:color/white"
                android:textSize="20.0sp"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
</com.xueersi.parentsmeeting.module.videoplayer.media.CenterLayout>
