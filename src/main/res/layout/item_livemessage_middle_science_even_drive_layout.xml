<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/COLOR_333333"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@id/tv_livevideo_livemessage_middle_even_right_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="连对-"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@id/view_livevideo_livemessage_middle_even_right_barrair"
        android:layout_width="1dp"
        android:layout_height="12dp"
        android:layout_marginLeft="8dp"
        android:background="@color/COLOR_33FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/tv_livevideo_livemessage_middle_even_right_now"
        app:layout_constraintLeft_toRightOf="@id/tv_livevideo_livemessage_middle_even_right_now"
        app:layout_constraintTop_toTopOf="@id/tv_livevideo_livemessage_middle_even_right_now" />

    <TextView
        android:id="@id/tv_livevideo_livemessage_middle_even_right_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="最高-"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/view_livevideo_livemessage_middle_even_right_barrair"
        app:layout_constraintTop_toTopOf="@id/tv_livevideo_livemessage_middle_even_right_now" />

    <View
        android:id="@id/v_livevideo_message_gap"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#5C5C5C"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>