<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <ImageView
        android:id="@+id/iv_livevideo_speechbul_close_bg"
        android:layout_width="517dp"
        android:layout_height="279dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shellwindow_common_board" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_livevideo_speechbul_close_bg"
        android:layout_alignTop="@id/iv_livevideo_speechbul_close_bg"
        android:layout_alignRight="@id/iv_livevideo_speechbul_close_bg"
        android:layout_alignBottom="@id/iv_livevideo_speechbul_close_bg">

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:gravity="center"
            android:text="确定关闭语音弹幕？"
            android:textColor="#ff7b583e"
            android:textSize="23dp" />

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp"
            android:gravity="center"
            android:text="关闭后将不能发语音弹幕"
            android:textColor="#ff7b583e"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_livevideo_speechbul_close_cancel"
                android:layout_width="130dp"
                android:layout_height="54dp"
                android:src="@drawable/selector_livevideo_primary_chinese_dialog_cancel" />

            <ImageView
                android:id="@+id/iv_livevideo_speechbul_close_confim"
                android:layout_width="130dp"
                android:layout_height="54dp"
                android:layout_marginLeft="28dp"
                android:src="@drawable/selector_livevideo_primary_chinese_dialog_confirm" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>