<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="37dp">


    <RelativeLayout
        android:id="@id/rl_live_roleplayer_message_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@id/ll_roleplayer_message_self_head_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_live_roleplayer_message_counttime"
                android:layout_gravity="center_horizontal">

                <com.xueersi.parentsmeeting.modules.livevideo.widget.CountDownHeadImageView
                    android:id="@id/civ_live_roleplayer_message_user_head"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:layout_centerInParent="true"
                    android:focusable="false"
                    android:src="@drawable/ic_default_head_square" />

                <TextView
                    android:id="@id/tv_live_roleplayer_message_counttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#36BC9B"
                    android:textSize="18sp"
                    android:visibility="invisible" />

            </RelativeLayout>


            <TextView
                android:id="@id/tv_live_roleplayer_message_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:textColor="#36BC9B"
                android:textSize="11sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="19dp"
            android:layout_toLeftOf="@id/ll_roleplayer_message_self_head_main"
            android:orientation="vertical">


            <!--&lt;!&ndash;评测评价短语&ndash;&gt;-->
            <!--<TextView-->
            <!--android:id="@id/tv_live_roleplayer_message_speech_tip"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:text="Well done"-->
            <!--android:textColor="#FFB81F"-->
            <!--android:textSize="15dp"-->
            <!--android:visibility="invisible" />-->

            <LinearLayout
                android:id="@id/rl_live_roleplayer_message_voice_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:background="@drawable/selector_live_roleplayer_self_item_bubble"
                android:clickable="true"
                android:minHeight="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/tv_live_roleplayer_message_voice_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@id/iv_live_roleplayer_message_voice_main"
                    android:maxWidth="250dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@id/iv_live_roleplayer_message_voice_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_chat_voice_to_playing_img" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@id/iv_live_roleplayer_message_speech_start5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/livevideo_roleplay_result_ic"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"  />

                <ImageView
                    android:id="@id/iv_live_roleplayer_message_speech_start4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/livevideo_roleplay_result_ic"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@id/iv_live_roleplayer_message_speech_start3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/livevideo_roleplay_result_ic"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@id/iv_live_roleplayer_message_speech_start2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/livevideo_roleplay_result_ic"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@id/iv_live_roleplayer_message_speech_start1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/livevideo_roleplay_result_ic"
                    android:layout_marginTop="4dp"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>