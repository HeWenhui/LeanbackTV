<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_livevideo_praise_light"
                android:orientation="vertical">

    <ImageView
        android:id="@id/iv_livevideo_public_praise_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_livevideo_praise_honnr"/>

    <RelativeLayout
        android:id="@id/rl_livevideo_public_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_livevideo_public_praise_bg"
        android:layout_alignLeft="@id/iv_livevideo_public_praise_bg"
        android:layout_alignRight="@id/iv_livevideo_public_praise_bg"
        android:layout_alignTop="@id/iv_livevideo_public_praise_bg"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@id/iv_livevideo_public_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="98dp"
            android:background="@drawable/bg_web_request_praise_small"/>

        <TextView
            android:id="@id/tv_livevideo_public_multi_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_livevideo_public_praise"
            android:layout_alignTop="@id/iv_livevideo_public_praise"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_livevideo_public_praise"
            android:gravity="center_vertical"
            android:text="小新新同学"
            android:textColor="@color/COLOR_333333"
            android:textSize="20sp"/>

        <GridView
            android:id="@id/gv_livevideo_public_multi_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_livevideo_public_praise"
            android:layout_marginBottom="42dp"
            android:layout_marginLeft="79dp"
            android:layout_marginRight="55dp"
            android:layout_marginTop="18dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="5"
            android:overScrollMode="never"
            android:scrollbars="none"/>
    </RelativeLayout>
</RelativeLayout>