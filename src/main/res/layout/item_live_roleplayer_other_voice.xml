<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp">

        <com.xueersi.parentsmeeting.modules.livevideo.widget.CountDownHeadImageView
            android:id="@id/civ_live_roleplayer_message_user_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:src="@drawable/ic_default_head_square" />

        <LinearLayout
            android:id="@id/ll_live_roleplayer_message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/rl_live_roleplayer_message_voice_main"
            android:layout_alignStart="@id/rl_live_roleplayer_message_voice_main"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_live_roleplayer_message_username"
                style="@style/text_style_chat__name_style"
                android:hint="Lily" />


        </LinearLayout>

        <LinearLayout
            android:id="@id/rl_live_roleplayer_message_voice_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_live_roleplayer_message_user_name"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/civ_live_roleplayer_message_user_head"
            android:background="@drawable/bg_chat_bubble_left_white"
            android:minHeight="40dp"
            android:minWidth="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/iv_live_roleplayer_message_voice_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_chat_voice_icon" />

            <TextView
                android:id="@id/tv_live_roleplayer_message_voice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@id/iv_live_roleplayer_message_voice_main"
                android:maxWidth="200dp"
                android:text="sdklfjaslfjasldjfasfd"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#333333"
                android:textSize="17sp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>