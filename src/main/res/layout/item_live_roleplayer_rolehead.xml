<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <!--头像-->
    <com.xueersi.xesalib.view.image.CircleImageView
        android:id="@id/civ_roleplayer_item_rolehead_img"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_default_head_square"
        app:border_color="@color/white" />

    <!--昵称-->
    <TextView
        android:id="@id/tv_live_roleplayer_item_rolehead_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:hint="昵称"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <!--角色名-->
    <TextView
        android:id="@id/tv_live_roleplayer_item_rolename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="7dp"
        android:textColor="@color/white"
        android:textSize="13dp" />


</LinearLayout>