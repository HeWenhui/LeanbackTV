<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
        android:id="@+id/tv_livevideo_praiselist_honor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_livevideo_praiselist_honor_crown"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#5e2718"
        android:textSize="12sp" />

    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
        android:id="@+id/tv_livevideo_praiselist_honor_counts"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:drawablePadding="5dp"
        android:paddingLeft="15dp"
        android:drawableRight="@drawable/ic_livevideo_praiselist_praise"
        android:maxLines="1"
        android:textColor="#5e2718"
        android:textSize="12sp" />


</RelativeLayout>