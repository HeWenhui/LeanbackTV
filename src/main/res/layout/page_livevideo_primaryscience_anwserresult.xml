<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_80">

    <RelativeLayout
        android:layout_marginTop="128dp"
        android:layout_width="445dp"
        android:layout_height="205dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/live_interact_primary_bg">

        <com.xueersi.parentsmeeting.modules.livevideo.widget.FastScrollableRecyclerView
            android:id="@+id/frv_livevideo_primaryscience_anwserrsult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="67dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="24dp"
            android:overScrollMode="never"
            app:VerticalThumbDrawable="@drawable/arts_pse_fastscorller_header_selector"
            app:VerticalTrackDrawable="@drawable/arts_rcl_fastscroller_tracker" />

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/lav_livevideo_primaryscience_anwserrsult_game_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:lottie_fileName="primary_science_answer_result/game-right.json"
        app:lottie_imageAssetsFolder="primary_science_answer_result/animation/game/right" />

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/lav_livevideo_primaryscience_anwserrsult_active_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:lottie_fileName="primary_science_answer_result/interact-active-right.json"
        app:lottie_imageAssetsFolder="primary_science_answer_result/animation/interact-active/right" />

    <RelativeLayout
        android:layout_width="445dp"
        android:layout_height="205dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp">

        <TextView
            android:id="@+id/tv_livevideo_primaryscience_anwerresult_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFEFE30F"
            android:textSize="14dp"
            android:layout_marginLeft="278dp"/>

    </RelativeLayout>

</RelativeLayout>