<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="53dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@id/rl_teampk_lucy_header_container"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/iv_teampk_open_box_winner_head"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/livevideo_teampk_header_cover" />

            <ImageView
                android:id="@id/iv_teampk_open_box_lucky_guy"
                android:layout_width="50dp"
                android:layout_height="13dp"
                android:layout_below="@id/iv_teampk_open_box_winner_head"
                android:layout_marginTop="-8dp"
                android:src="@drawable/livevideo_alertview_luckystar_img_disable" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:id="@id/tv_teampk_open_box_winner_name"
            android:text="宋珂珂宋珂珂宋珂珂"
            android:textSize="14sp"
            android:layout_alignTop="@id/rl_teampk_lucy_header_container"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/rl_teampk_lucy_header_container"
            android:layout_marginLeft="7dp"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:drawableLeft="@drawable/livevideo_tool_golds_img_disable"
            android:id="@id/tv_teampk_open_box_winner_coin"
            android:layout_alignLeft="@id/tv_teampk_open_box_winner_name"
            android:layout_below="@id/tv_teampk_open_box_winner_name"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:text="+15"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:maxWidth="100dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            android:drawablePadding="5dp" />

    </RelativeLayout>

</RelativeLayout>