<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="30dp">

    <TextView
        android:id="@id/tv_arts_answer_result_answer_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="1."
        android:textColor="#333333"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@id/ll_arts_answer_result_useranswer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_arts_answer_result_answer_index"
        android:orientation="horizontal">

        <com.xueersi.parentsmeeting.modules.livevideo.widget.ArtsAnswerTextView
            android:id="@id/tv_arts_answer_result_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="南极洲板块、美洲板块、印度洋板块板块块块"
            android:textColor="#333333"
            android:textSize="15sp"
            app:drawableLeftMargin="-5dp"
            app:drawableTopMargin="8dp"
            android:lineSpacingExtra="3dp"
            app:suffixIcon="@drawable/icon_live_prart_correct" />

        <!--选择题 标准答案-->
        <TextView
            android:id="@id/tv_arts_answer_result_stander_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="C"
            android:textColor="#6CBF4C"
            android:textSize="15sp"
            android:visibility="visible" />

    </LinearLayout>

    <!--填空题标准答案-->
    <TextView
        android:id="@id/tv_arts_answer_result_stander_answer_below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ll_arts_answer_result_useranswer_container"
        android:layout_below="@id/ll_arts_answer_result_useranswer_container"
        android:text="数字式线段式文字式,数字式线段式文字式,数字式,线段式,ß文字式"
        android:textColor="#6CBF4C"
        android:textSize="15sp"
        android:visibility="gone"
        android:lineSpacingExtra="3dp"
        android:layout_marginTop="-5dp"
        />

</RelativeLayout>