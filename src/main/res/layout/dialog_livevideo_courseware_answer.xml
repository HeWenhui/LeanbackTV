<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="295dp"
        android:layout_height="225dp"
        android:layout_centerInParent="true"
        android:background="@color/white">

        <ImageView
            android:id="@id/iv_livevideo_new_course_commit_close"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/cy_main_guanbi_icon_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:src="@drawable/livevideo_course_aler_pic_img_normal" />

        <TextView
            android:id="@id/tv_livevideo_new_course_commit_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="117dp"
            android:gravity="center"
            android:textColor="@color/COLOR_FF333333"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffdcdcdc" />

            <View
                android:id="@id/v_livevideo_new_course_commit_center"
                android:layout_width="1dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:background="#ffdcdcdc" />

            <TextView
                android:id="@id/tv_livevideo_new_course_commit_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/v_livevideo_new_course_commit_center"
                android:gravity="center"
                android:text="确认提交"
                android:textColor="@color/COLOR_F13232"
                android:textSize="16sp" />

            <TextView
                android:id="@id/tv_livevideo_new_course_commit_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/v_livevideo_new_course_commit_center"
                android:gravity="center"
                android:text="继续做答"
                android:textColor="@color/COLOR_F13232"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>