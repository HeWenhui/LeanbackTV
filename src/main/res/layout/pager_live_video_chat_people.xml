<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@id/rl_livevideo_chat_head1"
        android:layout_width="51.5dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@id/rl_livevideo_chat_head_back1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/live_task_quan_icon_normal">

            <com.xueersi.ui.widget.CircleImageView
                android:id="@id/civ_livevideo_chat_head1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                app:border_width="0dp" />

        </RelativeLayout>

        <TextView
            android:id="@id/tv_livevideo_chat_head1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_livevideo_chat_head_back1"
            android:layout_alignLeft="@id/rl_livevideo_chat_head_back1"
            android:layout_alignRight="@id/rl_livevideo_chat_head_back1"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <ImageView
            android:id="@id/iv_livevideo_chat_praise1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignBottom="@id/rl_livevideo_chat_head_back1"
            android:layout_alignParentRight="true"
            android:src="@drawable/livevideo_right_dianzan_btn_normal" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_livevideo_chat_praise1"
            android:layout_alignLeft="@id/iv_livevideo_chat_praise1"
            android:layout_alignRight="@id/iv_livevideo_chat_praise1"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@id/tv_livevideo_chat_count1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_livevideo_video_chat_praise_interaction_num"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />
        </RelativeLayout>

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/lav_livevideo_chat_praise1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@id/rl_livevideo_chat_head2"
        android:layout_width="51.5dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/rl_livevideo_chat_head1">

        <RelativeLayout
            android:id="@id/rl_livevideo_chat_head_back2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/live_task_quan_icon_normal">

            <com.xueersi.ui.widget.CircleImageView
                android:id="@id/civ_livevideo_chat_head2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                app:border_width="0dp" />

        </RelativeLayout>

        <TextView
            android:id="@id/tv_livevideo_chat_head2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_livevideo_chat_head_back2"
            android:layout_alignLeft="@id/rl_livevideo_chat_head_back2"
            android:layout_alignRight="@id/rl_livevideo_chat_head_back2"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:gravity="center"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <ImageView
            android:id="@id/iv_livevideo_chat_praise2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignBottom="@id/rl_livevideo_chat_head_back2"
            android:layout_alignParentRight="true"
            android:src="@drawable/livevideo_right_dianzan_btn_normal" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/iv_livevideo_chat_praise2"
            android:layout_alignLeft="@id/iv_livevideo_chat_praise2"
            android:layout_alignRight="@id/iv_livevideo_chat_praise2"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@id/tv_livevideo_chat_count2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_livevideo_praise_interaction_num"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="visible" />
        </RelativeLayout>

    </RelativeLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/lav_livevideo_chat_praise2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@id/rl_livevideo_chat_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@id/rl_livevideo_chat_head2"
        android:visibility="gone">

        <View
            android:id="@id/v_livevideo_chat_myline"
            android:layout_width="1dp"
            android:layout_height="58dp"
            android:layout_centerVertical="true"
            android:alpha="0.2"
            android:background="@drawable/shape_livevideo_chat_myline" />

        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@id/v_livevideo_chat_myline">

            <com.xueersi.parentsmeeting.widget.AgoraVolumeWaveView
                android:id="@id/vw_livevideo_chat_voice"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vw_livevideo_chat_voice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:includeFontPadding="false"
                android:text="已接麦"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>