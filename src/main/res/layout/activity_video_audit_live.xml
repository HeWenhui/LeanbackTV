<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@id/rl_course_video_contentview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@id/rl_course_video_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_default_height"
        android:background="@color/COLOR_000000">
        <!-- 播放器 -->
        <RelativeLayout
            android:id="@id/rl_livevideo_student_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <com.xueersi.parentsmeeting.modules.videoplayer.media.XESVideoView
                android:id="@id/xv_livevideo_student_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <!-- 存放播放器的布局 -->

        <com.xueersi.parentsmeeting.modules.videoplayer.media.CenterLayout
            android:id="@id/cl_course_video_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/COLOR_000000">

            <!-- 播放器 -->

            <com.xueersi.parentsmeeting.modules.videoplayer.media.VideoView
                android:id="@id/vv_course_video_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:saveEnabled="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@id/rl_course_video_loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@id/probar_course_video_loading_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:indeterminateDrawable="@drawable/animlst_video_loading"/>

                    <TextView
                        android:id="@id/tv_course_video_loading_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/probar_course_video_loading_progress"
                        android:layout_centerHorizontal="true"
                        android:paddingTop="7.0dip"
                        android:text="@string/video_layout_loading"
                        android:textColor="@android:color/white"
                        android:textSize="20.0sp"
                        android:visibility="gone"/>
                </RelativeLayout>
            </RelativeLayout>
        </com.xueersi.parentsmeeting.modules.videoplayer.media.CenterLayout>

        <RelativeLayout
            android:id="@id/rl_livevideo_student_load"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/rl_livevideo_student_video"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/rl_livevideo_student_video"
            android:background="#535353">

            <ImageView
                android:id="@id/iv_livevideo_student_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_livevideo_student_camera"
                android:visibility="invisible"/>

            <TextView
                android:id="@id/tv_livevideo_student_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_livevideo_student_camera"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:paddingTop="7dp"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="invisible"/>

            <ProgressBar
                android:id="@id/pb_livevideo_student_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/animlst_video_loading"/>

            <TextView
                android:id="@id/tv_livevideo_student_load_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pb_livevideo_student_load"
                android:layout_centerHorizontal="true"
                android:paddingTop="7dp"
                android:text="加载学生视频"
                android:textColor="@android:color/white"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@id/rl_course_video_first_backgroud"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/COLOR_000000">

            <!-- 退出按钮 （横屏的时候变成竖屏，竖屏的时候退出当前Activity） -->

            <ImageView
                android:id="@id/iv_course_video_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cy_bars_bockwite_icon_normal"
                android:contentDescription="@string/content_desc_lock"
                android:padding="3dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv_course_video_loading_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/livevideo_cy_moren_logo_normal"/>

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp">

                    <ProgressBar
                        android:id="@id/probar_course_video_loading_tip_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:indeterminateDrawable="@drawable/animlst_video_loading"/>
                </RelativeLayout>

                <TextView
                    android:id="@id/tv_course_video_loading_content"
                    style="@style/text_font12_ffffff_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="0dp"
                    android:text="正在获取网络资源，请稍候"/>

                <TextView
                    android:id="@id/tv_course_video_loading_fail"
                    style="@style/text_font12_ffffff_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- 老师不再直播间 -->
        <ImageView
            android:id="@id/iv_course_video_teacher_notpresent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
        </ImageView>
        <!-- 接麦老师视频界面位置 -->
        <RelativeLayout
            android:id="@id/rl_course_video_live_agora_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
        </RelativeLayout>
        <!-- LiveMediaController界面位置 -->
        <RelativeLayout
            android:id="@id/rl_course_video_live_controller_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@id/rl_livevideo_student_video"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rl_livevideo_student_video"
            android:background="@color/COLOR_333333">

            <RelativeLayout
                android:id="@id/rl_livevideo_student_liveinfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/bg_livevideo_student_liveinfo"/>

                <LinearLayout
                    android:id="@id/ll_livevideo_student_liveinfo_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/text_font11_ffffff_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签到时间："/>

                    <TextView
                        style="@style/text_font11_ffffff_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="在线时长："/>

                    <TextView
                        style="@style/text_font11_ffffff_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正  确  率："/>

                    <TextView
                        style="@style/text_font11_ffffff_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="组内排名："/>

                </LinearLayout>

                <LinearLayout
                    android:id="@id/ll_livevideo_student_liveinfo_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/ll_livevideo_student_liveinfo_left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@id/tv_livevideo_student_check_time"
                        style="@style/text_font11_ffffff_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>

                    <TextView
                        android:id="@id/tv_livevideo_student_online"
                        style="@style/text_font11_ffffff_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>

                    <TextView
                        android:id="@id/tv_livevideo_student_radio"
                        style="@style/text_font11_ffffff_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>

                    <TextView
                        android:id="@id/tv_livevideo_student_team"
                        style="@style/text_font11_ffffff_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""/>

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>
        <!-- 直播回放 互动题显示的界面位置 -->
        <RelativeLayout
            android:id="@id/rl_course_video_live_question_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone">
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>