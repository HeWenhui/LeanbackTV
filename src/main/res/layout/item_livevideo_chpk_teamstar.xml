<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@id/iv_teampk_pkresult_student_head"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="7dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/livevideo_chpk_logo_border" />

    <TextView
        android:id="@id/tv_teampk_pkresult_contribution_name"
        android:gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:maxLines="2"
        android:maxWidth="60dp"
        android:text="宋珂珂"
        android:textColor="#ffffff"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@id/tv_teampk_student_add_energy"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:drawableRight="@drawable/livevideo_chpk_energy_img"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="+10"
        android:textColor="#ffffff"
        android:textSize="11sp"
        android:textStyle="bold" />

</FrameLayout>