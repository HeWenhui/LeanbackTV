<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <ImageView
            android:id="@id/iv_teampk_pkresult_student_head"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/live_video_teampk_headmask"
            android:padding="3dp" />

        <TextView
            android:id="@id/tv_teampk_pkresult_contribution_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="2"
            android:maxWidth="60dp"
            android:singleLine="true"
            android:text="宋珂珂"
            android:textColor="#ffffff"
            android:textSize="11sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@id/tv_teampk_student_add_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:drawableRight="@drawable/livevideo_chpk_energy_img_disable"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="+10"
        android:textColor="#ffffff"
        android:textSize="11sp"
        android:textStyle="bold" />

</FrameLayout>