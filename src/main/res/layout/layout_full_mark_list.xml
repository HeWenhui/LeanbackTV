<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="500dp"
    android:layout_height="375dp"
    android:background="@drawable/livevideo_pic_img_normal">

    <com.xueersi.parentsmeeting.modules.livevideo.widget.SlowHorizontalScrollView
        android:id="@id/sv_live_full_mark_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@id/ll_full_mark_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@id/ll_full_mark_list_no1_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout
                    android:id="@id/ll_full_mark_list_no2_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@id/ll_full_mark_list_no3_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                </LinearLayout>

                <LinearLayout
                    android:id="@id/ll_full_mark_list_no4_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.xueersi.parentsmeeting.modules.livevideo.widget.SlowHorizontalScrollView>

    <TextView
        android:id="@id/tv_full_mark_list_no1"
        style="@style/text_font11_ffffff_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tv_full_mark_list_no2"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@id/tv_full_mark_list_no2"
        style="@style/text_font11_ffffff_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@id/tv_full_mark_list_no3"
        style="@style/text_font11_ffffff_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/tv_full_mark_list_no1"
        android:gravity="center_horizontal" />
</RelativeLayout>