<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_CC000000"
    android:clickable="true"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@id/iv_livevideo_super_speaker_back_pop_window_background"
        android:layout_width="520dp"
        android:layout_height="280dp"
        android:src="@drawable/bg_livevideo_kindergarten_primary_school_microphone_close_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
        android:id="@id/tv_livevideo_super_speaker_back_camera_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/super_speaker_back_camera_tip"
        android:textColor="@color/COLOR_5A3A13"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="@id/iv_livevideo_super_speaker_back_pop_window_background"
        app:layout_constraintRight_toRightOf="@id/iv_livevideo_super_speaker_back_pop_window_background"
        app:layout_constraintTop_toTopOf="@id/iv_livevideo_super_speaker_back_pop_window_background" />

    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
        android:id="@id/tv_livevideo_super_speaker_back_camera_content_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/super_speaker_back_camera_content_tip"
        android:textColor="@color/COLOR_5A3A13"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_livevideo_super_speaker_back_camera_tip"
        app:layout_constraintRight_toRightOf="@id/tv_livevideo_super_speaker_back_camera_tip"
        app:layout_constraintTop_toBottomOf="@id/tv_livevideo_super_speaker_back_camera_tip" />

    <ImageView
        android:id="@id/iv_livevideo_super_speaker_back_pop_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="120dp"
        android:src="@drawable/selector_livevideo_primary_chinese_dialog_confirm"
        app:layout_constraintRight_toRightOf="@id/iv_livevideo_super_speaker_back_pop_window_background"
        app:layout_constraintTop_toBottomOf="@id/tv_livevideo_super_speaker_back_camera_content_tip" />

    <ImageView
        android:id="@id/iv_livevideo_super_speaker_back_pop_window_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:src="@drawable/selector_livevideo_primary_chinese_dialog_cancel"
        app:layout_constraintLeft_toLeftOf="@id/iv_livevideo_super_speaker_back_pop_window_background"
        app:layout_constraintTop_toBottomOf="@id/tv_livevideo_super_speaker_back_camera_content_tip"
        app:layout_constraintTop_toTopOf="@id/iv_livevideo_super_speaker_back_pop_yes" />

</android.support.constraint.ConstraintLayout>