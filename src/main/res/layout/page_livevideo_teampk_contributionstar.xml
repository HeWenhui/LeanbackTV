<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/live_video_teampk_pkresult_bg" />

    <!--尺寸适配-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/lav_teampk_contribution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <com.xueersi.parentsmeeting.modules.livevideo.widget.TeamPkPraiseLayout
        android:id="@id/pk_praise_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@drawable/selector_live_teampk_close"
        android:id="@id/iv_teampk_contribution_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginRight="13dp"
        />

     <com.xueersi.parentsmeeting.modules.livevideo.widget.TimeCountDowTextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#80ffffff"
         android:textSize="14dp"
         android:textStyle="bold"
         app:layout_constraintRight_toLeftOf="@id/iv_teampk_contribution_close"
         app:layout_constraintTop_toTopOf="@id/iv_teampk_contribution_close"
         android:layout_marginTop="11dp"
         android:layout_marginRight="11dp"
         android:id="@id/tv_teampk_contribution_time"
         />



</android.support.constraint.ConstraintLayout>