<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_alpha_black"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@id/lav_teacher_priase"
        android:visibility="invisible"
        />


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/half_alpha_black"
        android:visibility="invisible"
        android:id="@id/cstl_teampk_praise_answer_right"
        >
        <!--表扬全对 lottieView-->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@id/lav_teampk_praise_anwser_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.constraint.Guideline
            android:id="@id/gl_teampk_praise_answer_top_guide_line"
            app:layout_constraintGuide_percent="0.546"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <LinearLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl_teampk_praise_answer_top_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@id/iv_teampk_praise_energy"
                android:layout_width="19dp"
                android:layout_height="25dp"
                android:src="@drawable/livevideo_tool_energy_img_disable"
                android:visibility="invisible" />

            <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
                android:id="@id/tv_teampk_praise_energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="+10"
                android:textColor="#FF6700"
                android:textSize="24dp"
                android:visibility="invisible" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</FrameLayout>