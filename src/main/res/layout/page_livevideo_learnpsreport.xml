<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_livevideo_pslearnreport_bg"
        android:layout_centerInParent="true"
        android:background="@drawable/livevideo_pslearnreport_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_livevideo_pslearnreport_bg"
        android:layout_alignLeft="@id/iv_livevideo_pslearnreport_bg"
        android:layout_alignRight="@id/iv_livevideo_pslearnreport_bg"
        android:layout_alignTop="@id/iv_livevideo_pslearnreport_bg"
        android:paddingBottom="22dp">

        <LinearLayout
            android:id="@+id/ll_pslearnreport_firstview"
            android:layout_above="@+id/iv_livevideo_redpackage_cofirm"
            android:layout_centerHorizontal="true"
            android:layout_width="310dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="100dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/livevideo_palearnreport_learningtime"
                    android:layout_width="49dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="学习时长"
                    android:textSize="14sp"
                    android:textColor="#7D553F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_learningtime"
                    android:textSize="14sp"
                    android:text="5分钟"
                    android:textColor="#7D553F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="95dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/livevideo_pslearnreport_yourcorrectrate"
                    android:layout_width="54dp"
                    android:layout_height="65dp"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="你的正确率"
                    android:textSize="14sp"
                    android:textColor="#7D553F"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_yourcorrectrate"
                    android:textSize="14sp"
                    android:text="60%"
                    android:textColor="#7D553F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="104dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/livevideo_pslearnreport_classcorrectrate"
                    android:layout_width="48dp"
                    android:layout_height="56dp"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="班级正确率"
                    android:textSize="14sp"
                    android:textColor="#7D553F"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_classcorrectrate"
                    android:textSize="14sp"
                    android:text="50%"
                    android:textColor="#7D553F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_marginTop="99dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/livevideo_pslearnreport_yourranking"
                    android:layout_width="49dp"
                    android:layout_height="61dp"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:text="你的排名"
                    android:textSize="14sp"
                    android:textColor="#7D553F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_yourranking"
                    android:textSize="14sp"
                    android:text="第4名"
                    android:textColor="#7D553F"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/bt_livevideo_psreport_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/livevideo_pslearnreport_evaluation"
            android:layout_marginBottom="38dp"
            />
        <ImageView
            android:id="@+id/iv_livevideo_pslearnreport_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/understandclose"/>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_pslearnreport_secondview"
            android:layout_above="@+id/bt_livevideo_psreport_submit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="匿名评价，请选择你的听课感受"
                android:textColor="#7D553F"
                android:textSize="20sp"
                android:layout_width="290dp"
                android:layout_height="23dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@id/rl_livevideo_evaluate_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@id/tv_livevideo_evaluate_star_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/rb_livevideo_evaluate_star"
                        android:layout_alignTop="@id/rb_livevideo_evaluate_star"
                        android:gravity="center_vertical"
                        android:text="知识掌握程度"
                        android:textColor="#7D553F"
                        android:textSize="13sp"/>

                    <com.xueersi.xesalib.view.ratingbar.RatingBar
                        android:id="@id/rb_livevideo_evaluate_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_livevideo_evaluate_star_tip"
                        hedgehog:clickable="true"
                        hedgehog:starCount="5"
                        hedgehog:starEmpty="@drawable/livevideofeedback_normalstar"
                        hedgehog:starFill="@drawable/livevideofeedback_selectedstar"
                        hedgehog:starImageMargin="8dp"
                        hedgehog:starImageSize="23dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/rl_livevideo_evaluate_star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_livevideo_evaluate_star"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@id/tv_livevideo_evaluate_star_tip2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/rb_livevideo_evaluate_star2"
                        android:layout_alignTop="@id/rb_livevideo_evaluate_star2"
                        android:gravity="center_vertical"
                        android:text="课堂互动氛围"
                        android:textColor="#7D553F"
                        android:textSize="13sp"/>

                    <com.xueersi.xesalib.view.ratingbar.RatingBar
                        android:id="@id/rb_livevideo_evaluate_star2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_livevideo_evaluate_star_tip2"
                        hedgehog:clickable="true"
                        hedgehog:starCount="5"
                        hedgehog:starEmpty="@drawable/livevideofeedback_normalstar"
                        hedgehog:starFill="@drawable/livevideofeedback_selectedstar"
                        hedgehog:starImageMargin="8dp"
                        hedgehog:starImageSize="23dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/rl_livevideo_evaluate_star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_livevideo_evaluate_star2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@id/tv_livevideo_evaluate_star_tip3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/rb_livevideo_evaluate_star3"
                        android:layout_alignTop="@id/rb_livevideo_evaluate_star3"
                        android:gravity="center_vertical"
                        android:text="老师精神状态"
                        android:textColor="#7D553F"
                        android:textSize="13sp"/>

                    <com.xueersi.xesalib.view.ratingbar.RatingBar
                        android:id="@id/rb_livevideo_evaluate_star3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_livevideo_evaluate_star_tip3"
                        hedgehog:clickable="true"
                        hedgehog:starCount="5"
                        hedgehog:starEmpty="@drawable/livevideofeedback_normalstar"
                        hedgehog:starFill="@drawable/livevideofeedback_selectedstar"
                        hedgehog:starImageMargin="8dp"
                        hedgehog:starImageSize="23dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/bt_livevideo_psreport_submit"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/livevideopsreport_submit"
            android:layout_marginBottom="38dp"
            />

    </RelativeLayout>

</RelativeLayout>