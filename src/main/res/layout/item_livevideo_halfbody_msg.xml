<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    >

    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:background="@drawable/shape_live_livemsg_bg"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:id="@id/tv_live_halfbody_msg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:lineSpacingExtra="5dp"
        android:visibility="invisible"
        />

    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:background="@drawable/shape_live_livemsg_bg"
        android:textSize="14sp"
        android:text="聊天服务器已连接成功"
        android:textColor="@color/white"
        android:gravity="top"
        android:layout_alignParentRight="true"
        android:id="@id/tv_live_halfbody_sys_msg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="5dp"
        android:lineSpacingExtra="5dp"
        android:visibility="invisible"
        />


</RelativeLayout>