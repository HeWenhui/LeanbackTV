<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/shape_corners_4dp_ff000000"
    android:orientation="horizontal">

    <TextView
        android:id="@id/bt_livevideo_worddictation_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击查看批改结果"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"/>

    <Button
        android:id="@id/bt_livevideo_worddictation_close"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/livevideo_dictation_result_close"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="41dp"/>

</LinearLayout>