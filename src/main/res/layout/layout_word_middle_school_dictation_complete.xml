<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/shape_corners_4dp_ff000000"
    android:orientation="horizontal">

    <TextView
        android:id="@id/bt_livevideo_worddictation_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击查看批改结果"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"/>

    <Button
        android:id="@id/bt_livevideo_worddictation_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_dictation_button_close" />

</LinearLayout>