<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_popupwin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ib_shut"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"
        android:background="@drawable/cy_main_guanbi_icon_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.xueersi.parentsmeeting.modules.livevideo.widget.RoundProgressBar
        android:id="@+id/roundProgressBar"
        android:layout_width="145dp"
        android:layout_height="155dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android_custom:roundColor="#dcdcdc"
        android_custom:roundProgressColor="#88C844"
        android_custom:textIsDisplayable="false"
        android_custom:textColor="#FFFF00"
        android_custom:roundWidth="10dp"
        android_custom:textSize="30px" />

    <TextView
        android:id="@+id/tv_total_score"
        android:text="92%"
        android:textSize="30sp"
        android:textColor="#88C844"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="正确率"
        android:textSize="16sp"
        android:textColor="#999999"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_below="@+id/roundProgressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:textColor="#333333"
        android:text="恭喜，你打败了92%的学生"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@+id/tv_result"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/COLOR_DCDCDC" />

    <TextView
        android:layout_below="@+id/tv_result"
        android:layout_marginTop="40dp"
        android:id="@+id/tv_detail_result"
        android:text="推荐您报名起航班"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_detail_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_chat"
            android:gravity="center"
            android:text="咨询老师"
            android:textColor="#F13232"
            android:visibility="gone"
            android:background="@drawable/bg_askteacher"
            android:layout_marginRight="30dp"
            android:textSize="16sp"
            android:layout_width="110dp"
            android:layout_height="38dp" />

        <Button
            android:id="@+id/bt_apply"
            android:gravity="center"
            android:text="立即报名"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_applying"
            android:layout_width="110dp"
            android:layout_height="38dp" />
    </LinearLayout>
</RelativeLayout>