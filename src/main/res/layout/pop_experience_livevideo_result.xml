<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_CC000000">

    <RelativeLayout
        android:layout_width="295dp"
        android:layout_height="343dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_popupwin">

        <ImageButton
            android:id="@+id/ib_shut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cy_main_guanbi_icon_normal"
            android:scaleType="fitCenter" />

        <com.xueersi.parentsmeeting.modules.livevideo.widget.RoundProgressBar
            android:id="@+id/roundProgressBar"
            android:layout_width="145dp"
            android:layout_height="155dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android_custom:roundColor="#dcdcdc"
            android_custom:roundProgressColor="#88C844"
            android_custom:roundWidth="10dp"
            android_custom:textColor="#FFFF00"
            android_custom:textIsDisplayable="false"
            android_custom:textSize="30px" />

        <TextView
            android:id="@+id/tv_total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="92%"
            android:textColor="#88C844"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="正确率"
            android:textColor="#999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roundProgressBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="恭喜，你打败了92%的学生"
            android:textColor="#333333"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_result"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/COLOR_DCDCDC" />

        <TextView
            android:id="@+id/tv_detail_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="推荐您报名起航班"
            android:textColor="#666666"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_detail_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_chat"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_askteacher"
                android:gravity="center"
                android:text="咨询老师"
                android:textColor="#F13232"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_apply"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:background="@drawable/bg_applying"
                android:gravity="center"
                android:text="立即报名"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>