<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/rl_live_stand_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/livevideo_zw_dengdaida_bg_before"
    android:paddingBottom="10dp">

    <TextView
        android:id="@id/tv_live_stand_update_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pb_live_stand_update"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_live_stand_update_zip"
        android:shadowColor="@color/mediacontroller_bg" />

    <RelativeLayout
        android:id="@id/rl_live_stand_update_prog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_live_stand_update_prog_light"
        android:layout_marginBottom="2dp"
        android:visibility="invisible">

        <TextView
            android:id="@id/tv_live_stand_update_prog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_live_stand_update_pro_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

    <ProgressBar
        android:id="@id/pb_live_stand_update"
        style="@style/ProgressBar_live_stand_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:max="100"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <ImageView
        android:id="@id/iv_live_stand_update_prog_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/pb_live_stand_update"
        android:layout_alignTop="@id/pb_live_stand_update"
        android:src="@drawable/bg_live_stand_update_prog_light"
        android:visibility="invisible" />

    <ImageView
        android:id="@id/iv_live_stand_update_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cy_bars_bockwite_icon_normal"
        android:contentDescription="@string/content_desc_lock"
        android:padding="3dp" />
</RelativeLayout>