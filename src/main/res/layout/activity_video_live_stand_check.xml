<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/rl_live_stand_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/livevideo_zw_dengdaida_bg_before"
    android:paddingBottom="10dp">

    <TextView
        android:id="@id/tv_live_stand_update_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pb_live_stand_update"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:shadowColor="@color/mediacontroller_bg"
        android:shadowDx="4"
        android:shadowDy="-4"
        android:shadowRadius="2"
        android:text="加载中，请耐心等待"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@id/rl_live_stand_update_prog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/pb_live_stand_update"
        android:layout_marginBottom="2dp"
        android:visibility="invisible">

        <TextView
            android:id="@id/tv_live_stand_update_prog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_live_stand_update_pro_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@id/iv_live_stand_update_prog_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_live_stand_update_prog"
            android:layout_centerHorizontal="true"
            android:src="@drawable/bg_livevideo_common_word_arrow" />
    </RelativeLayout>

    <ProgressBar
        android:id="@id/pb_live_stand_update"
        style="@style/ProgressBar_live_stand_update"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:max="100" />

    <ImageView
        android:id="@id/iv_live_stand_update_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cy_bars_bockwite_icon_normal"
        android:contentDescription="@string/content_desc_lock"
        android:padding="3dp" />
</RelativeLayout>