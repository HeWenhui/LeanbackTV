<com.xueersi.ui.widget.ZoomerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:library="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    library:designHeight="360dp"
    library:designWidth="500dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/livevideo_chpk_background"
        library:layoutType="frame" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/COLOR_99000000"
        library:layoutType="frame" />



    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="230dp"
        android:layout_marginTop="130dp"
        android:orientation="vertical">

        <com.xueersi.parentsmeeting.modules.livevideo.chpk.widget.AwardNumberView
            android:id="@id/av_livevideo_chpk_awardTeamNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <com.xueersi.parentsmeeting.modules.livevideo.widget.TeamPkRecyclerView
            android:id="@id/iv_livevideo_chpk_openAwardRanker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="14dp"
            android:overScrollMode="never"
            android:scrollbars="none" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal|bottom">

        <com.xueersi.parentsmeeting.modules.livevideo.chpk.widget.AwardNumberView
            android:id="@id/av_livevideo_chpk_awardUserNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@id/iv_livevideo_chpk_openAwardState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/livevideo_chpk_openalready" />

    </FrameLayout>

    <ImageView
        android:id="@id/iv_livevideo_chpk_openAwardClose"
        library:layoutType="frame"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/livevideo_alertview_close_bth_normal"
        android:visibility="gone" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/lv_livevideo_chpk_lottieEffectView"
        library:layoutType="frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@id/iv_livevideo_chpk_awardClickImage"
        android:layout_gravity="center"
        android:layout_width="110dp"
        android:layout_height="110dp" />

</com.xueersi.ui.widget.ZoomerLayout>