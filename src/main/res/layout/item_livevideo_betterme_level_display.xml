<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="142dp"
        android:background="@drawable/app_xiaomubiao_shellwindow_duanwei_img_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:id="@+id/tv_livevideo_betterme_level_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:textColor="#ff5bb383"
            android:textSize="13sp"
            tools:text="倔强青铜" />

        <ImageView
            android:id="@+id/iv_livevideo_betterme_level_img_left"
            android:layout_width="70dp"
            android:layout_height="54dp"
            android:layout_marginTop="6dp" />

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:id="@+id/tv_livevideo_betterme_upstar_describtion_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:textColor="#ffe65c00"
            android:textSize="10sp"
            tools:text="每完成3次目标升1星" />

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:id="@+id/tv_livevideo_betterme_uplevel_describtion_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffedb1"
            android:textSize="10sp"
            tools:text="满3星升级" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="142dp"
        android:layout_marginLeft="28dp"
        android:background="@drawable/app_xiaomubiao_shellwindow_duanwei_img_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:id="@+id/tv_livevideo_betterme_level_name_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="#ff8691a3"
            android:textSize="13sp"
            tools:text="勤奋白银" />

        <ImageView
            android:id="@+id/iv_livevideo_betterme_level_img_right"
            android:layout_width="70dp"
            android:layout_height="54dp"
            android:layout_marginTop="4dp" />

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:id="@+id/tv_livevideo_betterme_upstar_describtion_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="#ffe65c00"
            android:textSize="10sp"
            tools:text="每完成4次目标升1星" />

        <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
            android:id="@+id/tv_livevideo_betterme_uplevel_describtion_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffedb1"
            android:textSize="10sp"
            tools:text="满3星升级" />

    </LinearLayout>

</LinearLayout>