<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@id/iv_livevideo_vote_result_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_livevideo_vote_result_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@id/iv_livevideo_vote_result_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/bg_livevideo_vote_result_top" />

        <ImageView
            android:id="@id/iv_livevideo_vote_result_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/bg_livevideo_vote_result_close" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_livevideo_vote_result_mine"
            android:layout_below="@id/iv_livevideo_vote_result_top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@id/ll_livevideo_vote_result_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_live_vote_resut_statist"
                    android:orientation="horizontal"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp" />
            </HorizontalScrollView>

        </RelativeLayout>

        <TextView
            android:id="@id/tv_livevideo_vote_result_mine"
            style="@style/text_font14_white_style"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="我的选择" />
    </RelativeLayout>

</RelativeLayout>