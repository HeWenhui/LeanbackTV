<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a0ffffff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:id="@id/v_live_mark_point_sig"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/shape_red_corners" />

        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="54dp"
            android:layout_margin="5dp">

            <ImageView
                android:id="@id/iv_live_mark_point_shot_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="center"
                 />

            <ImageView
                android:id="@id/iv_live_mark_point_play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#a0000000"
                android:padding="10dp"
                android:src="@drawable/selector_bt_play_white_red" />
        </FrameLayout>

        <TextView
            android:id="@id/tv_live_mark_point_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@id/iv_live_mark_point_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/selector_live_mark_delete"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>

</LinearLayout>