<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_livevideo_small_chinese_understand_background"
        android:layout_width="500dp"
        android:layout_height="292dp"
        android:src="@drawable/bg_livevideo_small_chinese_sign_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView

        android:id="@+id/iv_livevideo_small_chinese_understand_text"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/bg_livevideo_small_chinese_understand_text"
        app:layout_constraintLeft_toLeftOf="@+id/iv_livevideo_small_chinese_understand_background"
        app:layout_constraintRight_toRightOf="@+id/iv_livevideo_small_chinese_understand_background"
        app:layout_constraintTop_toTopOf="@+id/iv_livevideo_small_chinese_understand_background" />

    <ImageView
        android:id="@+id/iv_livevideo_small_chinese_understand_yes"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="110dp"
        android:src="@drawable/selector_livevideo_small_chinese_understand_yes"
        app:layout_constraintBottom_toBottomOf="@+id/iv_livevideo_small_chinese_understand_background"
        app:layout_constraintRight_toRightOf="@+id/iv_livevideo_small_chinese_understand_background" />

    <ImageView
        android:id="@+id/iv_livevideo_small_chinese_understand_no"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_marginLeft="110dp"
        android:layout_marginBottom="110dp"
        android:src="@drawable/selector_livevideo_small_chinese_understand_no_click"
        app:layout_constraintBottom_toBottomOf="@+id/iv_livevideo_small_chinese_understand_background"
        app:layout_constraintLeft_toLeftOf="@+id/iv_livevideo_small_chinese_understand_background" />

</android.support.constraint.ConstraintLayout>