<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:id="@id/rl_video_mediacontroller_info_panel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:alpha="0.6"
        android:background="@drawable/shape_live_stand_title">

        <!-- 退出按钮 （横屏的时候变成竖屏，竖屏的时候退出当前Activity） -->

        <ImageView
            android:id="@id/iv_video_mediacontroller_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/content_desc_lock"
            android:paddingLeft="20dp"
            android:src="@drawable/cy_bars_bockwite_icon_normal" />

        <ImageView
            android:id="@id/iv_live_stand_title_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_video_mediacontroller_back"
            android:src="@drawable/zhibojiemian_nav_zhibo_icon_normal"
            android:visibility="gone" />

        <TextView
            android:id="@id/tv_live_stand_title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_live_stand_title_red"
            android:includeFontPadding="false"
            android:text="直播 00:25:34"
            android:textColor="@android:color/white"
            android:visibility="gone" />
        <!-- 播放的视频名称 -->

        <TextView
            android:id="@id/tv_video_mediacontroller_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- 横竖屏切换 -->
        <ImageView
            android:id="@id/iv_video_mediacontroller_controls_allview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="15dp"
            android:scaleType="center"
            android:src="@drawable/ic_video_mediacontroller_controls_enlarge"
            android:visibility="gone" />

        <ImageView
            android:id="@id/iv_video_mark_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/livevideo_live_mark_img"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
