<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/tv_livevideo_primaryscience_answerresult_answer_number"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14dp"
        android:text="题号" />

    <TextView
        android:id="@+id/tv_livevideo_primaryscience_answerresult_right_answer"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:gravity="center"
        android:text="正确答案" />

    <TextView
        android:id="@+id/tv_livevideo_primaryscience_answerresult_my_answer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:gravity="center"
        android:text="你的答案" />

    <RelativeLayout
        android:layout_marginTop="4dp"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_livevideo_primaryscience_answerresult_answer_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/live_interact_primary_right" />
    </RelativeLayout>
</LinearLayout>

