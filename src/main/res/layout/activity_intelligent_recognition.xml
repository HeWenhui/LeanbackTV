<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intelligent_recognition.IntelligentRecognitionActivity"
    tools:ignore="MissingConstraints">
    <!--Ready GO!欢迎页面-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view_livevideo_intelligent_recognition_ready_go"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_livevideo_intelligent_recognition_background_textview"
        android:layout_width="422dp"
        android:layout_height="314dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/bg_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="iv_livevideo_intelligent_recognition_background_textview" />

    <TextView
        android:id="@+id/tv_livevideo_intelligent_recognition_textview"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="70dp"
        android:maxLines="10"
        android:textColor="@color/COLOR_303134"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        app:layout_constraintRight_toRightOf="@+id/barrier2"
        app:layout_constraintTop_toTopOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        tools:text="adfkjjfafdafsasafasfasffds\nfasdffads\nafdasfldfkasdfjdsa" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="iv_livevideo_intelligent_recognition_background_textview" />
    <!--显示能量条Lottie动画-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view_livevideo_intelligent_recognition_waveview_open_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintLeft_toLeftOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintRight_toRightOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        app:lottie_fileName="intelligent_recognition_study_v2/english/waveview_open_start/data.json"
        app:lottie_imageAssetsFolder="intelligent_recognition_study_v2/english/waveview_open_start/images" />

    <com.xueersi.ui.widget.WaveView
        android:id="@+id/wv_livevideo_intelligent_recognition_energy_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/lottie_view_livevideo_intelligent_recognition_waveview_open_start"
        app:layout_constraintRight_toRightOf="@+id/lottie_view_livevideo_intelligent_recognition_waveview_open_start"
        app:layout_constraintTop_toTopOf="@+id/lottie_view_livevideo_intelligent_recognition_waveview_open_start" />
    <!--显示得分动画-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view_livevideo_intelligent_recognition_get_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:lottie_fileName="intelligent_recognition_study_v2/english/get_score/data.json"
        app:lottie_imageAssetsFolder="intelligent_recognition_study_v2/english/get_score/images"
        app:lottie_loop="true" />

</android.support.constraint.ConstraintLayout>