<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intelligent_recognition.IntelligentRecognitionActivity"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/iv_livevideo_intelligent_recognition_background_textview"
        android:layout_width="422dp"
        android:layout_height="314dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/bg_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="iv_livevideo_intelligent_recognition_background_textview" />

    <TextView
        android:id="@+id/tv_livevideo_intelligent_recognition_textview"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="70dp"
        android:maxLines="10"
        android:textColor="@color/COLOR_303134"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        app:layout_constraintRight_toRightOf="@+id/barrier2"
        app:layout_constraintTop_toTopOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        tools:text="adfkjjfafdafsasafasfasffds\nfasdffads\nafdasfldfkasdfjdsa" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="iv_livevideo_intelligent_recognition_background_textview" />

    <com.xueersi.ui.widget.WaveView
        android:id="@+id/wv_livevideo_intelligent_recognition_energy_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintLeft_toLeftOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintRight_toRightOf="@+id/iv_livevideo_intelligent_recognition_background_textview" />
</android.support.constraint.ConstraintLayout>