<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/layout_livevideo_gold_microphone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints,NotSibling">

    <android.support.constraint.Group
        android:id="@id/group_livevideo_gold_microphone_teacher_tip_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_gold_microphone_teacher_tip,
        tv_gold_microphone_teacher_tip" />

    <ImageView
        android:id="@id/iv_gold_microphone_teacher_tip"
        android:layout_width="388dp"
        android:layout_height="133dp"
        android:src="@drawable/shellwindow_toast_board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
        android:id="@id/tv_gold_microphone_teacher_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="老师开启了金话筒"
        android:textColor="@color/COLOR_5A3A13"
        android:textSize="19dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_gold_microphone_teacher_tip"
        app:layout_constraintLeft_toLeftOf="@id/iv_gold_microphone_teacher_tip"
        app:layout_constraintRight_toRightOf="@id/iv_gold_microphone_teacher_tip"
        app:layout_constraintTop_toTopOf="@id/iv_gold_microphone_teacher_tip" />

    <android.support.constraint.Group
        android:id="@id/group_livevideo_gold_microphone_microphone_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_livevideo_gold_microphone_bg,swv_livevideo_gold_microphone_sound_wave" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/lottie_livevideo_gold_microphone_gold_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/iv_livevideo_gold_microphone_bg"
        app:layout_constraintRight_toRightOf="@id/iv_livevideo_gold_microphone_bg"
        app:layout_constraintTop_toTopOf="@id/iv_livevideo_gold_microphone_bg"
        app:lottie_fileName="gold_microphone/data.json"
        app:lottie_imageAssetsFolder="gold_microphone/images"
        app:lottie_loop="false" />

    <ImageView
        android:id="@id/iv_livevideo_gold_microphone_bg"
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/bg_livevideo_gold_microphone_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.xueersi.parentsmeeting.modules.livevideo.goldmicrophone.SoundWaveView
        android:id="@id/swv_livevideo_gold_microphone_sound_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:cInnerRaidus="31"
        app:cSpeed="3"
        app:layout_constraintBottom_toBottomOf="@id/iv_livevideo_gold_microphone_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_livevideo_gold_microphone_bg"
        app:layout_constraintRight_toRightOf="@id/iv_livevideo_gold_microphone_bg"
        app:layout_constraintTop_toTopOf="@id/iv_livevideo_gold_microphone_bg" />

    <ImageView
        android:id="@id/iv_livevideo_gold_microphone_cancel"
        android:layout_width="31dp"
        android:layout_height="32dp"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="35dp"
        android:src="@drawable/selector_small_chinese_sign_close"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_livevideo_gold_microphone_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_livevideo_gold_microphone_bg" />

    <android.support.constraint.Group
        android:id="@id/iv_livevideo_gold_microphone_setting_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="iv_livevideo_gold_microphone_setting_background,
        iv_livevideo_gold_microphone_setting"
        tools:ignore="NotSibling" />

    <ImageView
        android:id="@id/iv_livevideo_gold_microphone_setting_background"
        android:layout_width="128dp"
        android:layout_height="58dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/bg_livevideo_microphone_no_permission"
        app:layout_constraintBottom_toTopOf="@id/iv_livevideo_gold_microphone_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_livevideo_gold_microphone_bg"
        app:layout_constraintRight_toRightOf="@id/iv_livevideo_gold_microphone_bg" />

    <ImageView
        android:id="@id/iv_livevideo_gold_microphone_setting"
        android:layout_width="47dp"
        android:layout_height="17dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/selector_livevideo_gold_microphone_setting"
        app:layout_constraintBottom_toBottomOf="@id/iv_livevideo_gold_microphone_setting_background"
        app:layout_constraintLeft_toLeftOf="@id/iv_livevideo_gold_microphone_setting_background"
        app:layout_constraintRight_toRightOf="@id/iv_livevideo_gold_microphone_setting_background" />

    <android.support.constraint.Group
        android:id="@id/group_livevideo_gold_microphone_speak_loudly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="iv_livevideo_gold_microphone_speak_loudly" />


    <ImageView
        android:id="@id/iv_livevideo_gold_microphone_speak_loudly"
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/bg_livevideo_gold_microphone_speak_loudly"
        app:layout_constraintBottom_toTopOf="@id/iv_livevideo_gold_microphone_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_livevideo_gold_microphone_bg"
        app:layout_constraintRight_toRightOf="@id/iv_livevideo_gold_microphone_bg" />


</android.support.constraint.ConstraintLayout>