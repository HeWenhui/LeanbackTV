<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@id/iv_gold_microphone_teacher_tip"
        android:layout_width="388dp"
        android:layout_height="133dp"
        android:src="@drawable/shellwindow_toast_board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/tv_gold_microphone_teacher_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_gold_microphone_teacher_tip"
        app:layout_constraintLeft_toLeftOf="@id/iv_gold_microphone_teacher_tip"
        app:layout_constraintRight_toRightOf="@id/iv_gold_microphone_teacher_tip"
        app:layout_constraintTop_toTopOf="@id/iv_gold_microphone_teacher_tip" />

    <ImageView
        android:id="@id/iv_livevideo_gold_microphone_bg"
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/bg_livevideo_gold_microphone_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@id/iv_livevideo_gold_microphone_cancel"
        android:layout_width="31dp"
        android:layout_height="32dp"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="35dp"
        android:src="@drawable/selector_small_chinese_sign_close"
        app:layout_constraintBottom_toBottomOf="@id/iv_livevideo_gold_microphone_bg"
        app:layout_constraintLeft_toLeftOf="@id/iv_livevideo_gold_microphone_bg" />

</android.support.constraint.ConstraintLayout>