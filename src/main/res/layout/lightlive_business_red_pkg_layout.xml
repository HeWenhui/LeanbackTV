<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/COLOR_80000000">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/lv_lightlive_busi_red_pack_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/lv_lightlive_busi_red_pack_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/lv_lightlive_busi_red_pack_red_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@id/iv_lightlive_busi_red_pack_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/lv_lightlive_busi_red_pack_red"
        android:layout_alignRight="@id/lv_lightlive_busi_red_pack_red"
        android:layout_marginRight="-7dp"
        android:src="@drawable/lightlive_business_selector_signin_close" />

</RelativeLayout>