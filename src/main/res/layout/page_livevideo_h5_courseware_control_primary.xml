<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/shape_livevideo_sec_primary_bg">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_livevideo_course_primary_bg"
        android:gravity="center">

        <TextView
            android:id="@id/tv_livevideo_new_course_time_lable"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/livevideo_course_primarty_time"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@id/tv_livevideo_new_course_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@id/tv_livevideo_new_course_time_lable"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@id/tv_livevideo_new_course_num"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_livevideo_course_primary_bg"
        android:gravity="center"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:text="1 / 1"
        android:textColor="#ffffffff"
        android:textSize="18sp" />

    <Button
        android:id="@id/bt_livevideo_new_course_pre"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/bt_livevideo_new_course_next"
        android:background="@drawable/selector_livevideo_course_primary_pre"
        android:enabled="false" />

    <Button
        android:id="@id/bt_livevideo_new_course_next"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/live_interact_primary_next"
        android:enabled="true" />

    <Button
        android:id="@id/bt_livevideo_new_course_submit"
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/live_interact_primary_submit"
        android:visibility="gone" />
</RelativeLayout>
