<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/rl_livevideo_small_english_redpackage_unopen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@id/iv_livevideo_small_english_redpackage_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_livevideo_small_english_redppackage_board" />

        <ImageView
            android:id="@id/iv_livevideo_small_english_redpackage_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/bg_livevideo_small_english_redpaper_open_btn_nor" />

        <ImageView
            android:id="@id/iv_livevideo_small_english_redpackage_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/selector_livevideo_small_english_close" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rl_livevideo_small_english_redpackage_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_livevideo_small_english_redpackage_board_open" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="170dp"
            android:src="@drawable/bg_livevideo_small_english_redpackage" />

        <TextView
            android:id="@id/tv_livevidoe_small_english_redpackage_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="210dp"
            android:text="+6"
            android:textColor="@color/COLOR_FFDB2A"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@id/iv_livevideo_small_english_open_redpackage_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/selector_livevideo_small_english_close" />
    </RelativeLayout>
</RelativeLayout>