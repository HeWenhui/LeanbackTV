<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/COLOR_CC000000">

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginTop="170dp"-->
    <!--android:src="@drawable/bg_livevideo_small_english_redpackage"-->
    <!--android:visibility="gone"/>-->

    <RelativeLayout
        android:id="@id/rl_livevideo_small_english_redpackage_unopen"
        android:layout_width="315dp"
        android:layout_height="375dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@id/iv_livevideo_small_english_redpackage_board"
            android:layout_width="315dp"
            android:layout_height="375dp"
            android:src="@drawable/bg_livevideo_small_english_redppackage_board" />

        <ImageView
            android:id="@id/iv_livevideo_small_english_redpackage_open"
            android:layout_width="320dp"
            android:layout_height="302dp"
            android:layout_alignTop="@id/iv_livevideo_small_english_redpackage_board"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="80dp"
            android:src="@drawable/selector_livevideo_small_english_open_redpackage_btn" />

        <ImageView
            android:id="@id/iv_livevideo_small_english_redpackage_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignRight="@id/iv_livevideo_small_english_redpackage_board"
            android:layout_alignTop="@id/iv_livevideo_small_english_redpackage_board"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/selector_livevideo_small_english_close" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rl_livevideo_small_english_redpackage_open"
        android:layout_width="315dp"
        android:layout_height="375dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <ImageView
            android:id="@id/iv_livevideo_small_english_open_redpackage_board"
            android:layout_width="315dp"
            android:layout_height="375dp"
            android:src="@drawable/bg_livevideo_small_english_redpackage_board_open" />

        <RelativeLayout
            android:id="@id/rl_livevideo_small_english_redpackage_open_animotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="-30dp"
            android:paddingTop="90dp">

            <ImageView
                android:id="@id/iv_livevideo_small_english_money_img"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:src="@drawable/bg_livevideo_small_english_redpackage" />

            <TextView
                android:id="@id/tv_livevidoe_small_english_redpackage_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-40dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/iv_livevideo_small_english_money_img"
                android:text="+6"
                android:textColor="@color/COLOR_FFDB2A"
                android:textSize="30sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@id/iv_livevideo_small_english_open_redpackage_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignRight="@id/iv_livevideo_small_english_open_redpackage_board"
            android:layout_alignTop="@id/iv_livevideo_small_english_open_redpackage_board"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/selector_livevideo_small_english_close" />
    </RelativeLayout>

</RelativeLayout>