<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_popupwin"
    android:id="@+id/switch_orientation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_alignParentLeft="true"
        android:text="正在报名中"
        android:drawableLeft="@drawable/apply_icon"
        android:drawablePadding="15px"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_apply_totalnum"
        android:layout_alignParentRight="true"
        android:text="4"
        android:drawableRight="@drawable/apply_go"
        android:drawablePadding="15px"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:textColor="#F13232"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>