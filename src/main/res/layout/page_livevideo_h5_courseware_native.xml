<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@id/rl_livevideo_subject_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ren.yale.android.cachewebviewlib.CacheWebView
            android:id="@id/wv_livevideo_subject_web"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@id/iv_livevideo_subject_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cy_main_shuaxinbai_icon_normal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rl_livevideo_new_course_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#80000000">

            <ImageView
                android:id="@id/iv_livevideo_new_course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@id/tv_livevideo_new_course_time_lable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_livevideo_new_course_time"
                android:text="还剩："
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@id/tv_livevideo_new_course_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_livevideo_new_course_time_lable"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@id/tv_livevideo_new_course_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#ffffffff"
                android:textSize="18sp" />

            <Button
                android:id="@id/iv_livevideo_new_course_pre"
                android:layout_width="84dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/iv_livevideo_new_course_next"
                android:background="@drawable/selector_livevideo_course_pre_next"
                android:enabled="false"
                android:text="上一题"
                android:textColor="@color/selector_livevideo_couse_pre_next"
                android:textSize="16sp" />

            <Button
                android:id="@id/iv_livevideo_new_course_next"
                android:layout_width="84dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/selector_livevideo_course_pre_next"
                android:enabled="true"
                android:text="下一题"
                android:textColor="@color/selector_livevideo_couse_pre_next"
                android:textSize="16sp" />

            <Button
                android:id="@id/iv_livevideo_new_course_submit"
                android:layout_width="84dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_livevideo_course_submit"
                android:text="提交"
                android:textColor="@color/white"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@id/rl_livevideo_subject_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/transparent_80">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@id/iv_data_loading_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <ProgressBar
                android:id="@id/pg_livevideo_new_course_prog"
                style="@style/ProgressBar_live_new_course_junior"
                android:layout_width="350dp"
                android:layout_height="5dp"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@id/tv_data_loading_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:text="加载中 0%"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>

        <ImageView
            android:id="@id/iv_livevideo_course_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cy_main_shuaxinbai_icon_normal"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>