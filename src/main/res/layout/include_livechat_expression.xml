<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@id/rl_livevideo_message_expression"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE">

        <com.xueersi.xesalib.view.listview.HorizontalListView
            android:id="@id/hlv_chat_expression_hlvCustomList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

        <ImageView
            android:id="@id/iv_livevideo_message_expression_cancle"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:src="@drawable/bg_livevideo_message_expression_cancle"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_livevideo_message_expression_cancle"
            android:background="@color/borderline"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@id/ll_chat_expression_page_select"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_above="@id/rl_livevideo_message_expression"
        android:background="#ddd"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <View
            android:id="@id/v_chat_expression_page0_select"
            style="@style/dot_style"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_expression_page_focused"/>

        <View
            android:id="@id/v_chat_expression_page1_select"
            style="@style/dot_style"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"/>

        <View
            android:id="@id/v_chat_expression_page2_select"
            style="@style/dot_style"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"/>

        <View
            android:id="@id/v_chat_expression_page3_select"
            style="@style/dot_style"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"/>

        <View
            android:id="@id/v_chat_expression_page4_select"
            style="@style/dot_style"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>

        <View
            android:id="@id/v_chat_expression_page5_select"
            style="@style/dot_style"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>

        <View
            android:id="@id/v_chat_expression_page6_select"
            style="@style/dot_style"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@id/vp_chat_expression_view"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_above="@id/ll_chat_expression_page_select"
        android:layout_alignParentTop="true"
        android:background="#ddd"
        android:visibility="gone">
    </android.support.v4.view.ViewPager>

</RelativeLayout>