<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_livevideo_intelligent_recognition_background_textview"
        android:layout_width="422dp"
        android:layout_height="300dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/bg_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="iv_livevideo_intelligent_recognition_background_textview" />

    <ImageView
        android:id="@+id/iv_livevideo_intelligent_recognition_question"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintRight_toRightOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintTop_toTopOf="@+id/iv_livevideo_intelligent_recognition_background_textview" />

    <TextView
        android:id="@+id/tv_livevideo_intelligent_recognition_textview"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="70dp"
        android:maxLines="10"
        android:textColor="@color/COLOR_303134"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/barrier"
        app:layout_constraintRight_toRightOf="@+id/barrier2"
        app:layout_constraintTop_toTopOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        tools:text="adfkjjfafdafsasafasfasffds\nfasdffads\nafdasfldfkasdfjdsa" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="iv_livevideo_intelligent_recognition_background_textview" />

    <include
        android:id="@+id/layout_livevideo_intelligent_recognition_permission"
        layout="@layout/page_livevideo_english_intelligent_recognition_item_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/wv_livevideo_intelligent_recognition_energy_bar"
        app:layout_constraintLeft_toLeftOf="@+id/wv_livevideo_intelligent_recognition_energy_bar"
        app:layout_constraintRight_toRightOf="@+id/wv_livevideo_intelligent_recognition_energy_bar" />

    <ImageView
        android:id="@+id/iv_livevideo_intelligent_recognition_end_tip_background"
        android:layout_width="159dp"
        android:layout_height="28dp"
        android:src="@drawable/bg_livevideo_intelligent_recognition_end_tip_background"
        app:layout_constraintBottom_toTopOf="@+id/wv_livevideo_intelligent_recognition_energy_bar"
        app:layout_constraintLeft_toLeftOf="@+id/wv_livevideo_intelligent_recognition_energy_bar"
        app:layout_constraintRight_toRightOf="@+id/wv_livevideo_intelligent_recognition_energy_bar" />

    <com.xueersi.parentsmeeting.widget.FangZhengCuYuanTextView
        android:id="@+id/tv_livevideo_intelligent_recognition_end_tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3s后结束语音评测"
        android:textColor="@color/COLOR_D4D4D4"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_livevideo_intelligent_recognition_end_tip_background"
        app:layout_constraintLeft_toLeftOf="@+id/iv_livevideo_intelligent_recognition_end_tip_background"
        app:layout_constraintRight_toRightOf="@+id/iv_livevideo_intelligent_recognition_end_tip_background"
        app:layout_constraintTop_toTopOf="@+id/iv_livevideo_intelligent_recognition_end_tip_background" />
    <!--关闭提示-->
    <android.support.constraint.Group
        android:id="@+id/group_livevideo_intelligent_recognition_end_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="iv_livevideo_intelligent_recognition_end_tip_background,
                tv_livevideo_intelligent_recognition_end_tip_text" />
    <!--显示能量条Lottie动画-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view_livevideo_intelligent_recognition_waveview_open_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintRight_toRightOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        app:lottie_fileName="intelligent_recognition_study_v2/english/waveview_open_start/data.json"
        app:lottie_imageAssetsFolder="intelligent_recognition_study_v2/english/waveview_open_start/images" />

    <com.xueersi.ui.widget.WaveView
        android:id="@+id/wv_livevideo_intelligent_recognition_energy_bar"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:layout_marginTop="225dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintRight_toRightOf="@+id/iv_livevideo_intelligent_recognition_background_textview"
        app:layout_constraintTop_toTopOf="@+id/iv_livevideo_intelligent_recognition_background_textview" />
    <!--显示得分动画-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view_livevideo_intelligent_recognition_get_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:lottie_fileName="intelligent_recognition_study_v2/english/get_score/data.json"
        app:lottie_imageAssetsFolder="intelligent_recognition_study_v2/english/get_score/images"
        app:lottie_loop="true"
        app:lottie_repeatCount="0" />

    <!--Ready GO!欢迎页面-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_view_livevideo_intelligent_recognition_ready_go"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:lottie_fileName="intelligent_recognition_study_v2/english/ready_go/data.json"
        app:lottie_imageAssetsFolder="intelligent_recognition_study_v2/english/ready_go/images" />

    <FrameLayout
        android:id="@+id/framelayout_english_intelligent_recognition_top3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</android.support.constraint.ConstraintLayout>