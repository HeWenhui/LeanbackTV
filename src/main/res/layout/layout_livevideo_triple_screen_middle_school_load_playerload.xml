<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/COLOR_CC000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直播加载中..."
        android:textColor="@color/COLOR_FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_livevideo_triple_screen_loading_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:text="视频出现卡顿，可尝试点击屏幕中的"
            android:textColor="@color/COLOR_FFFFFF"
            android:textSize="14sp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/iv_livevideo_triple_screen_middle_school_loading_icon_middle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/bg_livevideo_normal_swich_flow"
            app:layout_constraintBottom_toBottomOf="@+id/tv_livevideo_triple_screen_loading_left"
            app:layout_constraintLeft_toRightOf="@+id/tv_livevideo_triple_screen_loading_left"
            app:layout_constraintTop_toTopOf="@+id/tv_livevideo_triple_screen_loading_left" />

        <TextView
            android:id="@+id/tv_livevideo_triple_scrren_loading_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="切换线路"
            android:textColor="@color/COLOR_FFFFFF"
            android:textSize="14sp"

            app:layout_constraintLeft_toRightOf="@+id/iv_livevideo_triple_screen_middle_school_loading_icon_middle" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
