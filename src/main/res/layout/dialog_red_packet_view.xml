<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@id/iv_livevideo_redpackage_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_livevideo_redpackage_bg"
        android:layout_alignLeft="@id/iv_livevideo_redpackage_bg"
        android:layout_alignRight="@id/iv_livevideo_redpackage_bg"
        android:layout_alignTop="@id/iv_livevideo_redpackage_bg"
        android:paddingBottom="22dp"
        android:visibility="gone">

        <ImageView
            android:id="@id/iv_livevideo_redpackage_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/bg_livevideo_redpackage_close" />

        <TextView
            android:id="@id/tv_livevideo_redpackage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:includeFontPadding="false"
            android:text="领取红包"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@id/tv_livevideo_redpackage_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_livevideo_redpackage_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="老师发金币了，快来领取吧！"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@id/iv_livevideo_redpackage_monkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_livevideo_redpackage_subtitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            android:background="@drawable/bg_livevideo_redpackage_monkey" />

        <Button
            android:id="@id/bt_livevideo_redpackage_cofirm"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_livevideo_redpackage_cofirm"
            android:text="领取"
            android:textColor="#ff4343"
            android:textSize="16sp" />
    </RelativeLayout>


</RelativeLayout>