<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_livevideo_speecteval_result_mine">

        <LinearLayout
            android:layout_marginLeft="22dp"
            android:layout_centerVertical="true"
            android:id="@id/ll_livevideo_speecteval_result_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />

        <ImageView
            android:id="@id/iv_livevideo_speecteval_result_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/ll_livevideo_speecteval_result_mine"
            android:src="@drawable/livevideo_enteampk_benchangchengjiu_gold_img_nor" />

        <TextView
            android:id="@id/tv_livevideo_speecteval_result_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/iv_livevideo_speecteval_result_gold"
            android:includeFontPadding="false"
            android:text="+1"
            android:textColor="#ff97091d"
            android:textSize="13sp" />

        <ImageView
            android:id="@id/iv_livevideo_speecteval_result_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/tv_livevideo_speecteval_result_gold"
            android:src="@drawable/livevideo_enteampk_benchangchengjiu_fair_img_nor" />

        <TextView
            android:id="@id/tv_livevideo_speecteval_result_energy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_livevideo_speecteval_result_energy"
            android:includeFontPadding="false"
            android:text="+1"
            android:textColor="#ff97091d"
            android:textSize="13sp" />

    </RelativeLayout>

    <ImageView
        android:id="@id/iv_livevideo_speecteval_result_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:layout_marginRight="11dp"
        android:src="@drawable/bg_live_stand_result_cancel_normal" />

    <ImageView
        android:id="@id/iv_livevideo_speecteval_result_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>