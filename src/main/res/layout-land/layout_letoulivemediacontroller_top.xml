<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:id="@id/rl_video_mediacontroller_info_panel"
        android:background="@drawable/shape_shade_80000000"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true">

        <!-- 退出按钮 （横屏的时候变成竖屏，竖屏的时候退出当前Activity） -->

        <ImageView
            android:id="@id/iv_video_mediacontroller_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/content_desc_lock"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:padding="4dp"
            android:background="@drawable/shape_oval_4d000000"
            android:src="@drawable/livevideo_lightlive_back_icon" />

        <!-- 播放的视频名称 -->

        <TextView
            android:id="@id/tv_video_mediacontroller_filename"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_toRightOf="@+id/iv_video_mediacontroller_back"
            android:layout_toLeftOf="@+id/iv_video_mediacontroller_controls_allview"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="24dp"
            android:singleLine="true"
            android:gravity="center_vertical|left"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 横竖屏切换 -->
        <ImageView
            android:id="@id/iv_video_mediacontroller_controls_allview"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="24dp"
            android:padding="4dp"
            android:scaleType="center"
            android:layout_marginRight="16dp"
            android:src="@drawable/livevideo_leclive_fullscreen_icon"
             />
        <ImageView
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:id="@+id/iv_video_tv_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_video_mediacontroller_controls_allview"
            android:src="@drawable/icon_tv_player" />
    </RelativeLayout>
</RelativeLayout>
