<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TeamPkProgressBar">
        <!--进度条高度-->
        <attr name="innerProgressBarHeight" format="dimension"></attr>
        <!--滑动头图片资源引用-->
        <attr name="sliderHeader" format="reference"></attr>
        <attr name="sliderHeaderBg" format="reference"></attr>
        <!--边线颜色-->
        <attr name="border_line_color" format="color" />
        <!--进度条颜色-->
        <attr name="progress_color_start" format="color" />
        <attr name="progress_color_end" format="color" />
        <!--背景颜色-->
        <attr name="bg_color_start" format="color" />
        <attr name="bg_color_end" format="color" />

    </declare-styleable>

    <declare-styleable name="SmoothAddNumTextView">
        <!--动画持续时间-->
        <attr name="anim_duration" format="string"></attr>
        <!--最大增加次数-->
        <attr name="max_add_count" format="integer"></attr>
    </declare-styleable>

    <!--自定义环形进度的属性-->
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>

    <!--recycleView 快速滑动条 属性-->
    <declare-styleable name="RclViewFastScroller">
        <!--滑动头图片资源引用-->
        <attr name="VerticalThumbDrawable" format="reference"></attr>
        <!--底部线条资源引用-->
        <attr name="VerticalTrackDrawable" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="PraiseBtnAnimLayout">
        <attr name="auto_star" format="boolean"></attr>
    </declare-styleable>
    <!--推荐课程的滚动Banner消息-->
    <declare-styleable name="MarqueeViewStyle">
        <attr name="mvInterval" format="integer|reference" />
        <attr name="mvAnimDuration" format="integer|reference" />
        <attr name="mvTextSize" format="dimension|reference" />
        <attr name="mvTextColor" format="color|reference" />
        <attr name="mvSingleLine" format="boolean" />
        <attr name="mvGravity">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
        <attr name="mvDirection">
            <enum name="bottom_to_top" value="0" />
            <enum name="top_to_bottom" value="1" />
            <enum name="right_to_left" value="2" />
            <enum name="left_to_right" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ArtsTextView">
        <attr name="suffixIcon" format="reference"></attr>
        <attr name="drawableTopMargin" format="dimension" />
        <attr name="drawableLeftMargin" format="dimension" />
        <!--是否使用系统默认字体,false:使用方正粗圆字体-->
        <attr name="useDefultTextFont" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ExpGuideOptionView">
        <attr name="titleText" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="contentText" format="string" />
        <attr name="contentColor" format="color" />
        <attr name="imageSrc" format="reference" />
    </declare-styleable>

    <declare-styleable name="AspectRelativeLayout">
        <attr name="content_aspect" format="float" />
    </declare-styleable>

    <!--涟漪控件属性-->
    <declare-styleable name="RingView">
        <attr name="cColor" format="color" />
        <attr name="cSpeed" format="float" />
        <attr name="cDensity" format="integer" />
        <attr name="cIsFill" format="boolean" />
        <attr name="cIsAlpha" format="boolean" />
        <attr name="cInnerRaidus" format="integer" />
    </declare-styleable>

    <declare-styleable name="XesLottieAnimView">
        <!--目标图片正常态图片-->
        <attr name="nor_img_res" format="reference"></attr>
        <!--目标图片点击态图片-->
        <attr name="click_img_res" format="reference"></attr>
    </declare-styleable>
</resources>
